(module strcat
	(main main))

(define hello #"hello\n")

(define (main args)
  (let* ((n (or (and (= (length args) 2) (string->number (cadr args))) 1))
	 (str ""))
    (do ((i 0 (+ i 1)))
	((= i n))
      (set! str (string-append str hello)))
    (display (string-length str))
    (newline)))
