import System(getArgs)
import Numeric

main = do [n] <- getArgs
          putStrLn $
             showFFloat (Just 9) (loop (read n) 0 0) ""

loop :: Int -> Double -> Double -> Double
loop 0 _ sum = sum
loop i d sum = loop (i - 1) d' (sum + (1/d')) where d' = d + 1
