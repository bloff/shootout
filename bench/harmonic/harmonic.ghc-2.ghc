-- Sum harmonic series 
-- Contributed by Einar Karttunen

import System(getArgs)
import Numeric

main = do [n] <- getArgs
          putStrLn $
             showFFloat (Just 9) (loop ((read n)+1) 0) ""

loop :: Double -> Double -> Double 
loop 0 sum = sum
loop i sum = loop (i - 1) (sum + (1/i))
