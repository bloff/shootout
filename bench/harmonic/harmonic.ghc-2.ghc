import System   
import Numeric
import GHC.Base
import GHC.Float

main = do (I# n) <- getArgs >>= return . read . head
          putStrLn $ showFFloat (Just 9) (D# (loop n 0.0##)) []

loop 0# s = s
loop d  s = loop (d-#1#) (s +## (1.0## /## int2Double# d))
