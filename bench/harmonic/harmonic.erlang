-module(harmonic).
-export([main/1]).

main([Arg]) ->
    Num = list_to_integer(Arg),
    io:fwrite("~.9f~n", [harmonic(Num)]),
    halt(0).

harmonic(0, Accum) -> Accum;
harmonic(X, Accum) -> 
    harmonic( X - 1, Accum + 1.0/X ).

harmonic(N) -> harmonic( N, 0 ).
