-module(harmonic).
-export([main/1]).

main([Arg]) ->
    Num = list_to_integer(Arg),
    io:fwrite("~.9f~n", [harmonic(Num)]),
    halt(0).

harmonic(N) ->
    lists:foldl( fun(X, Accum) -> Accum + 1.0 / X end,
        lists:seq(0, N) ).
