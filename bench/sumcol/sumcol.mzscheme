#!/usr/bin/mzscheme -r
;;; Sumcol
;;; http://shootout.alioth.debian.org/
;;;
;;; Contributed by Bengt Kleberg
(define sumcol
  (lambda (inport)
    (letrec ((sum (lambda (number acc)
		    (if (eof-object? number)
		      acc
		      (sum (read-line inport) (+ acc (string->number number)))))))
      (sum (read-line inport) 0))))

(define main (lambda ()
  (begin
    (display (sumcol (current-input-port)))
    (newline))))

(main)
