import ackermann; // reuse toSinglePositiveInt

int nsieve(int m, boolean[] isPrime){
   for(var i=2; i <= m; i++) isPrime[i] = true;
   var count = 0;

   for(var i=2; i <= m; i++){ 
      if (isPrime[i]){
         for(var k=i+i; k <= m; k+=i) isPrime[k] = false;
         count++;
      }
   }
   return count;
} 

void main(String[] args){
   var n = toSinglePositiveInt(args);
   if (n<2) n = 2;

   var m = (1<<n)*10000;    
   let flags = new boolean[m+1];    
   println("Primes up to " +  pad(m,8) + pad(nsieve(m,flags),8) ); 
   
   m = (1<<n-1)*10000; 
   println("Primes up to " +  pad(m,8) + pad(nsieve(m,flags),8) ); 
   
   m = (1<<n-2)*10000; 
   println("Primes up to " +  pad(m,8) + pad(nsieve(m,flags),8) );    
}

String pad(int i, int width){
   var s = i.toString;
   var p = width - s.length;
   while (p-- > 0) s = ' ' + s;
   return s;
}
