module fibo

import StdEnv, ArgEnv

fib :: !Int -> Int
fib n
	| n < 2 = 1
	| otherwise = fib (n-2) + fib (n-1)

Start
	| argc == 1
		= toString (fib n) +++ "\n"
	| otherwise
		= toString (fib 1) +++ "\n"
	where
		argc = size argv - 1
		argv = getCommandLine
		n = toInt (argv.[1])
