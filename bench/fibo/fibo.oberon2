MODULE Fibo;

IMPORT LangShootout, Out;

PROCEDURE Fib (n: LONGINT) : LONGINT;
BEGIN
  IF (n < 2) THEN
    RETURN 1;
  ELSE
    RETURN Fib (n - 2) + Fib (n - 1)
  END;
END Fib;

BEGIN
  Out.LongInt( Fib( LangShootout.Argi() ), 1 ); Out.Ln;
END Fibo.
