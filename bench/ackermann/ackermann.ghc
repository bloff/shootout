import System

main = putStrLn . (\n -> "Ack(3,"++n++"):"++n) . show . ack 3 . read . head =<< getArgs

ack (0::Int) (n::Int) = n+1
ack  m        n       = ack (m-1) $ if n == 0 then 1 else ack m (n-1)
