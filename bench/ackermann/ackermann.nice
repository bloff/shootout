void main(String[] args){
   let n = args.length == 0 ? 1 : Integer.parseInt(args[0]);
   println("Ack(3," + n + "): " + ack(3,n)); 
}


int ack(int m, int n) requires m >= 0 && n >= 0 { // precondition
   if (m == 0) return n + 1;
   if (n == 0) return ack(m-1, 1);
   return ack(m-1, ack(m, n-1)); 
}
