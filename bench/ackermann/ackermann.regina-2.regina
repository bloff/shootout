arg n .
if n = '' then n = 1

say 'Ack(3,' || n || '): ' || ack(3, n)
exit(0)

ack: procedure
arg m, n
select
	when m = 0 then return n + 1
	when n = 0 then return ack(m-1, 1)
	otherwise return ack(m-1, ack(m, n-1))
end

