# $Id: Makefile_bench,v 1.1 2008-05-23 18:24:36 igouy-guest Exp $
TESTS = \
 hello \
 binarytrees \
 chameneosredux \
 fannkuch \
 fasta \
 knucleotide \
 mandelbrot \
 meteor \
 nbody \
 nsieve \
 nsievebits \
 partialsums \
 pidigits \
 primes \
 recursive \
 regexdna \
 revcomp \
 spectralnorm \
 sumcol \
 tcpsocket \
 threadring


.PHONY: all plot test show clean clobber report

all plot test loc show clean clobber:
	-@for t in $(TESTS) ; do (cd $$t && $(BIN)/reset.bash &&  make -i $@) ; done

report: $(filter-out %.ocamlb,$(foreach dir,$(TESTS),$(wildcard $(dir)/$(dir).*)))
	@../bin/make_report $^

craps: $(TESTS)
	@../bin/make_craps $^
