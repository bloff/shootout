#!/usr/bin/perl
# to be run in top directory

# Sets up the lang/<impl> directories.

use File::Basename;

BEGIN {
    require "langs.pl";
}

sub main {

    foreach my $impl (keys %LANG) {

	unless (-d "lang/$impl") {
	    mkdir("lang/$impl");
	}

	while (defined($next = glob("lang/template/*"))) {

	    my $dest = "lang/$impl/" . basename($next);

	    unless (-r $dest) {
		symlink("../../$next", $dest);
	    }
	}
    }

}

main();
