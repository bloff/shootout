#!/bin/bash

# run this command in staging directory to 
# update all the symlinks in the published directory

cd ~/shootout/
find . -type l | while read link ; do
    if [ ! -L ~/www/shootout/$link ] ; then
	dest=`ls -l $link`
	dest=${dest##* }
	ln -s $dest ~/www/shootout/$link
	echo "created: ~/www/shootout/$link -> $dest"
    fi
done
