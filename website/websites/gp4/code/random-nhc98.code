<span class="kwa">import</span> System<span class="sym">(</span>getArgs<span class="sym">)
</span><span class="kwa">import</span> Numeric<span class="sym">(</span>showFFloat<span class="sym">)

</span>main <span class="sym">=</span> <span class="kwa">do</span> ~<span class="sym">[</span>n<span class="sym">] &lt;-</span> getArgs
          putStrLn <span class="sym">(</span>showFFloat <span class="sym">(</span>Just <span class="num">9</span><span class="sym">) (</span>randl <span class="num">100</span> <span class="sym">((</span>read n<span class="sym">)-</span><span class="num">1</span><span class="sym">)</span> <span class="num">42</span><span class="sym">)</span> <span class="str">&quot;&quot;</span><span class="sym">)

</span>randl <span class="sym">::</span> <span class="kwb">Double</span> <span class="sym">-&gt;</span> <span class="kwb">Int</span> <span class="sym">-&gt;</span> <span class="kwb">Int</span> <span class="sym">-&gt;</span> <span class="kwb">Double
</span>randl max n seed <span class="sym">=</span> newseed `seq` newrand `seq`
  if n <span class="sym">==</span> <span class="num">0</span> <span class="kwa">then</span> newrand <span class="kwa">else</span> randl max <span class="sym">(</span>n<span class="num">-1</span><span class="sym">)</span> newseed
