<span class="hl com">(* SPLITFILE=partialsums.znn *)</span>

module partialsums<span class="hl sym">;</span>
import
   System<span class="hl sym">.</span>Math as M<span class="hl sym">,</span>
   BenchmarksGame as BG<span class="hl sym">;</span>

const twothirds <span class="hl sym">=</span> <span class="hl num">2.0</span><span class="hl sym">/</span><span class="hl num">3.0</span><span class="hl sym">;</span>
var
   a1<span class="hl sym">,</span> a2<span class="hl sym">,</span> a3<span class="hl sym">,</span> a4<span class="hl sym">,</span> a5<span class="hl sym">,</span> a6<span class="hl sym">,</span> a7<span class="hl sym">,</span> a8<span class="hl sym">,</span> a9<span class="hl sym">,</span> alt<span class="hl sym">:</span> real<span class="hl sym">;</span>
   k<span class="hl sym">,</span>n<span class="hl sym">:</span> integer<span class="hl sym">;</span>
   k2<span class="hl sym">,</span> k3<span class="hl sym">,</span> sk<span class="hl sym">,</span> ck<span class="hl sym">:</span> real<span class="hl sym">;</span>
begin
   n <span class="hl sym">:=</span> BG<span class="hl sym">.</span><span class="hl kwd">argi</span><span class="hl sym">();</span>
   alt <span class="hl sym">:= -</span><span class="hl num">1.0</span><span class="hl sym">;</span>
   for k <span class="hl sym">:=</span> <span class="hl num">1</span> to n do
      k2 <span class="hl sym">:=</span> M<span class="hl sym">.</span><span class="hl kwd">Pow</span><span class="hl sym">(</span>k<span class="hl sym">,</span><span class="hl num">2</span><span class="hl sym">);</span> k3 <span class="hl sym">:=</span> k2<span class="hl sym">*</span>k<span class="hl sym">;</span>
      sk <span class="hl sym">:=</span> M<span class="hl sym">.</span><span class="hl kwd">Sin</span><span class="hl sym">(</span>k<span class="hl sym">);</span> ck <span class="hl sym">:=</span> M<span class="hl sym">.</span><span class="hl kwd">Cos</span><span class="hl sym">(</span>k<span class="hl sym">);</span>
      <span class="hl com">(* alt := ~alt; *)</span> alt <span class="hl sym">:= -</span><span class="hl num">1.0</span> <span class="hl sym">*</span> alt<span class="hl sym">;</span>

      a1 <span class="hl sym">:=</span> a1 <span class="hl sym">+</span> M<span class="hl sym">.</span><span class="hl kwd">Pow</span><span class="hl sym">(</span>twothirds<span class="hl sym">,</span>k<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">);</span>
      a2 <span class="hl sym">:=</span> a2 <span class="hl sym">+</span> M<span class="hl sym">.</span><span class="hl kwd">Pow</span><span class="hl sym">(</span>k<span class="hl sym">,-</span><span class="hl num">0.5</span><span class="hl sym">);</span>
      a3 <span class="hl sym">:=</span> a3 <span class="hl sym">+</span> <span class="hl num">1.0</span><span class="hl sym">/(</span>k<span class="hl sym">*(</span>k<span class="hl sym">+</span><span class="hl num">1.0</span><span class="hl sym">));</span>
      a4 <span class="hl sym">:=</span> a4 <span class="hl sym">+</span> <span class="hl num">1.0</span><span class="hl sym">/(</span>k3 <span class="hl sym">*</span> sk<span class="hl sym">*</span>sk<span class="hl sym">);</span>
      a5 <span class="hl sym">:=</span> a5 <span class="hl sym">+</span> <span class="hl num">1.0</span><span class="hl sym">/(</span>k3 <span class="hl sym">*</span> ck<span class="hl sym">*</span>ck<span class="hl sym">);</span>
      a6 <span class="hl sym">:=</span> a6 <span class="hl sym">+</span> <span class="hl num">1.0</span><span class="hl sym">/</span>k<span class="hl sym">;</span>
      a7 <span class="hl sym">:=</span> a7 <span class="hl sym">+</span> <span class="hl num">1.0</span><span class="hl sym">/</span>k2<span class="hl sym">;</span>
      a8 <span class="hl sym">:=</span> a8 <span class="hl sym">+</span> alt<span class="hl sym">/</span>k<span class="hl sym">;</span>
      a9 <span class="hl sym">:=</span> a9 <span class="hl sym">+</span> alt<span class="hl sym">/(</span><span class="hl num">2.0</span><span class="hl sym">*</span>k <span class="hl sym">-</span><span class="hl num">1.0</span><span class="hl sym">);</span>
   end<span class="hl sym">;</span>

   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a1<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;(2/3)^k&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a2<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;k^-0.5&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a3<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;1/k(k+1)&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a4<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;Flint Hills&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a5<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;Cookson Hills&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a6<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;Harmonic&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a7<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;Riemann Zeta&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a8<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;Alternating Harmonic&quot;</span><span class="hl sym">);</span>
   BG<span class="hl sym">.</span><span class="hl kwd">writex</span><span class="hl sym">(</span>a9<span class="hl sym">);</span> <span class="hl kwd">write</span><span class="hl sym">(</span><span class="hl num">9</span>X<span class="hl sym">:</span><span class="hl num">1</span><span class="hl sym">);</span> <span class="hl kwd">writeln</span><span class="hl sym">(</span><span class="hl str">&quot;Gregory&quot;</span><span class="hl sym">);</span>
end partialsums<span class="hl sym">.</span>
