module partialsums<span class="sym">;</span>
import
   System<span class="sym">.</span>Math as M<span class="sym">,</span>
   System<span class="sym">.</span>Console<span class="sym">;</span>

procedure <span class="kwd">writex</span><span class="sym">(</span>x<span class="sym">:</span>real<span class="sym">);</span> begin System<span class="sym">.</span>Console<span class="sym">.</span><span class="kwd">Write</span><span class="sym">(</span><span class="str">&quot;{0:f9}&quot;</span><span class="sym">,</span>x<span class="sym">);</span> end writex<span class="sym">;</span>

const n <span class="sym">=</span> <span class="num">25000</span><span class="sym">;</span>
const twothirds <span class="sym">=</span> <span class="num">2.0</span><span class="sym">/</span><span class="num">3.0</span><span class="sym">;</span>
var
   a1<span class="sym">,</span> a2<span class="sym">,</span> a3<span class="sym">,</span> a4<span class="sym">,</span> a5<span class="sym">,</span> a6<span class="sym">,</span> a7<span class="sym">,</span> a8<span class="sym">,</span> a9<span class="sym">,</span> alt<span class="sym">:</span> real<span class="sym">;</span>
   k<span class="sym">:</span> integer<span class="sym">;</span>
   k2<span class="sym">,</span> k3<span class="sym">,</span> sk<span class="sym">,</span> ck<span class="sym">:</span> real<span class="sym">;</span>
begin
   alt <span class="sym">:= -</span><span class="num">1.0</span><span class="sym">;</span>
   for k <span class="sym">:=</span> <span class="num">1</span> to n do
      k2 <span class="sym">:=</span> M<span class="sym">.</span><span class="kwd">Pow</span><span class="sym">(</span>k<span class="sym">,</span><span class="num">2</span><span class="sym">);</span> k3 <span class="sym">:=</span> k2<span class="sym">*</span>k<span class="sym">;</span>
      sk <span class="sym">:=</span> M<span class="sym">.</span><span class="kwd">Sin</span><span class="sym">(</span>k<span class="sym">);</span> ck <span class="sym">:=</span> M<span class="sym">.</span><span class="kwd">Cos</span><span class="sym">(</span>k<span class="sym">);</span>
      <span class="com">(* alt := ~alt; *)</span> alt <span class="sym">:= -</span><span class="num">1.0</span> <span class="sym">*</span> alt<span class="sym">;</span>

      a1 <span class="sym">:=</span> a1 <span class="sym">+</span> M<span class="sym">.</span><span class="kwd">Pow</span><span class="sym">(</span>twothirds<span class="sym">,</span>k<span class="sym">-</span><span class="num">1</span><span class="sym">);</span>
      a2 <span class="sym">:=</span> a2 <span class="sym">+</span> M<span class="sym">.</span><span class="kwd">Pow</span><span class="sym">(</span>k<span class="sym">,-</span><span class="num">0.5</span><span class="sym">);</span>
      a3 <span class="sym">:=</span> a3 <span class="sym">+</span> <span class="num">1.0</span><span class="sym">/(</span>k<span class="sym">*(</span>k<span class="sym">+</span><span class="num">1.0</span><span class="sym">));</span>
      a4 <span class="sym">:=</span> a4 <span class="sym">+</span> <span class="num">1.0</span><span class="sym">/(</span>k3 <span class="sym">*</span> sk<span class="sym">*</span>sk<span class="sym">);</span>
      a5 <span class="sym">:=</span> a5 <span class="sym">+</span> <span class="num">1.0</span><span class="sym">/(</span>k3 <span class="sym">*</span> ck<span class="sym">*</span>ck<span class="sym">);</span>
      a6 <span class="sym">:=</span> a6 <span class="sym">+</span> <span class="num">1.0</span><span class="sym">/</span>k<span class="sym">;</span>
      a7 <span class="sym">:=</span> a7 <span class="sym">+</span> <span class="num">1.0</span><span class="sym">/</span>k2<span class="sym">;</span>
      a8 <span class="sym">:=</span> a8 <span class="sym">+</span> alt<span class="sym">/</span>k<span class="sym">;</span>
      a9 <span class="sym">:=</span> a9 <span class="sym">+</span> alt<span class="sym">/(</span><span class="num">2.0</span><span class="sym">*</span>k <span class="sym">-</span><span class="num">1.0</span><span class="sym">);</span>
   end<span class="sym">;</span>

   <span class="kwd">writex</span><span class="sym">(</span>a1<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;(2/3)^k&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a2<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;k^-0.5&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a3<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;1/k(k+1)&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a4<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;Flint Hills&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a5<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;Cookson Hills&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a6<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;Harmonic&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a7<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;Riemann Zeta&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a8<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;Alternating Harmonic&quot;</span><span class="sym">);</span>
   <span class="kwd">writex</span><span class="sym">(</span>a9<span class="sym">);</span> <span class="kwd">write</span><span class="sym">(</span><span class="num">9</span>X<span class="sym">:</span><span class="num">1</span><span class="sym">);</span> <span class="kwd">writeln</span><span class="sym">(</span><span class="str">&quot;Gregory&quot;</span><span class="sym">);</span>
end partialsums<span class="sym">.</span>
