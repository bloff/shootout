<span class="kwa">let</span> complement <span class="sym">=</span>
  <span class="kwa">let</span> cplt <span class="sym">=</span> Array.init <span class="num">256</span> <span class="sym">(</span><span class="kwa">fun</span> i <span class="sym">-&gt;</span> Char.chr i<span class="sym">)</span> <span class="kwa">in</span>
  List.iter <span class="sym">(</span><span class="kwa">fun</span> <span class="sym">(</span>c1<span class="sym">,</span> c2<span class="sym">) -&gt;</span>
	       cplt.<span class="sym">(</span>Char.code c1<span class="sym">) &lt;-</span> c2<span class="sym">;</span>
