        go <span class="hl sym">!</span>array <span class="hl sym">!</span>i <span class="hl sym">=</span>
            <span class="hl kwa">if</span> i <span class="hl sym">==</span> size <span class="hl kwa">then</span>
                array
            <span class="hl kwa">else</span>
