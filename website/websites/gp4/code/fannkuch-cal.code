                            <span class="hl sym">(</span>max maxFlips <span class="hl sym">(</span>countFlips permCopy <span class="hl num">0</span> <span class="hl sym">(</span>n <span class="hl sym">-</span> <span class="hl num">1</span><span class="hl sym">)))</span>
                            dispCount
