sbs <span class="sym">=</span> <span class="str">&quot;B(c|g|t) D(a|g|t) H(a|c|t) K(g|t) M(a|c) N(a|c|g|t) R(a|g) S(c|g) V(a|c|g) W(a|t) Y(c|t)&quot;</span>

<span class="kwb">for</span> el <span class="kwb">in</span> sbs<span class="sym">.</span><span class="kwd">split</span><span class="sym">():</span>
