      e <span class="sym">:= !</span>e <span class="sym">-</span>. <span class="sym">(</span>b.mass <span class="sym">*</span>. b'.mass<span class="sym">) /</span>. distance
    <span class="kwa">done</span>
  <span class="kwa">done</span><span class="sym">;</span>
