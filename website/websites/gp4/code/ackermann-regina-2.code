arg n <span class="sym">.</span>
<span class="kwa">if</span> n <span class="sym">=</span> <span class="str">''</span> then n <span class="sym">=</span> <span class="num">1</span>

say <span class="str">'Ack(3,'</span> <span class="sym">||</span> n <span class="sym">||</span> <span class="str">'): '</span> <span class="sym">||</span> <span class="kwd">ack</span><span class="sym">(</span><span class="num">3</span><span class="sym">,</span> n<span class="sym">)</span>
<span class="kwd">exit</span><span class="sym">(</span><span class="num">0</span><span class="sym">)</span>

ack<span class="sym">:</span> procedure
arg m<span class="sym">,</span> n
select
	when m <span class="sym">=</span> <span class="num">0</span> then <span class="kwa">return</span> n <span class="sym">+</span> <span class="num">1</span>
	when n <span class="sym">=</span> <span class="num">0</span> then <span class="kwa">return</span> <span class="kwd">ack</span><span class="sym">(</span>m<span class="sym">-</span><span class="num">1</span><span class="sym">,</span> <span class="num">1</span><span class="sym">)</span>
	otherwise <span class="kwa">return</span> <span class="kwd">ack</span><span class="sym">(</span>m<span class="sym">-</span><span class="num">1</span><span class="sym">,</span> <span class="kwd">ack</span><span class="sym">(</span>m<span class="sym">,</span> n<span class="sym">-</span><span class="num">1</span><span class="sym">))</span>
