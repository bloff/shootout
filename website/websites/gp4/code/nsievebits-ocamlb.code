  Printf.printf <span class="str">&quot;Primes up to %8i %8i</span><span class="esc">\n</span><span class="str">&quot;</span> m <span class="sym">(</span>nsieve m<span class="sym">)</span>

<span class="kwa">let</span> <span class="sym">() =</span>
