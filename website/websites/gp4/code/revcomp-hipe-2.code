<span class="hl kwd">do</span><span class="hl sym">(</span><span class="hl str">&quot;&gt;&quot;</span><span class="hl sym">++</span>_<span class="hl sym">=</span>Descr<span class="hl sym">,</span>RevCompSeq<span class="hl sym">) -&gt;</span>
    <span class="hl slc">%% description. flush sequence, write description, get next line</span>
    <span class="hl kwd">flush</span><span class="hl sym">(</span>RevCompSeq<span class="hl sym">),</span>
    io<span class="hl sym">:</span><span class="hl kwd">fwrite</span><span class="hl sym">(</span><span class="hl str">&quot;~s&quot;</span><span class="hl sym">,[</span>Descr<span class="hl sym">]),</span>
    <span class="hl kwd">do</span><span class="hl sym">(</span>io<span class="hl sym">:</span><span class="hl kwd">get_line</span><span class="hl sym">(</span><span class="hl str">''</span><span class="hl sym">),[]);</span>
<span class="hl kwd">do</span><span class="hl sym">(</span>Str<span class="hl sym">,</span>RevCompSeq<span class="hl sym">) -&gt;</span>
