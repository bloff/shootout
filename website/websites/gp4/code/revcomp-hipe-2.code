<span class="hl kwd">flush</span><span class="hl sym">(</span>RevComp<span class="hl sym">,</span><span class="hl num">0</span><span class="hl sym">,</span>Lin<span class="hl sym">,</span>Seq<span class="hl sym">) -&gt;</span> <span class="hl kwd">flush</span><span class="hl sym">(</span>RevComp<span class="hl sym">,</span><span class="hl num">60</span><span class="hl sym">,[],[</span>Seq<span class="hl sym">,</span><span class="hl num">10</span><span class="hl sym">,</span>lists<span class="hl sym">:</span><span class="hl kwd">reverse</span><span class="hl sym">(</span>Lin<span class="hl sym">)]);</span>
<span class="hl kwd">flush</span><span class="hl sym">([</span>H<span class="hl sym">|</span>RevComp<span class="hl sym">],</span>N<span class="hl sym">,</span>Lin<span class="hl sym">,</span>Seq<span class="hl sym">) -&gt;</span> <span class="hl kwd">flush</span><span class="hl sym">(</span>RevComp<span class="hl sym">,</span>N<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">,[</span>H<span class="hl sym">|</span>Lin<span class="hl sym">],</span>Seq<span class="hl sym">)</span>.

