      <span class="kwa">fun</span><span class="sym">(</span>L<span class="sym">) -&gt;</span> io<span class="sym">:</span><span class="kwd">fwrite</span><span class="sym">(</span><span class="str">&quot;~.9f</span><span class="esc">\t</span><span class="str">~w~n&quot;</span><span class="sym">,</span> L<span class="sym">),</span>
