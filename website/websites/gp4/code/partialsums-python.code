    <span class="kwb">print</span> <span class="str">&quot;%0.9f</span><span class="esc">\t</span><span class="str">Cookson Hills&quot;</span> <span class="sym">%</span> sums4
    <span class="kwb">print</span> <span class="str">&quot;%0.9f</span><span class="esc">\t</span><span class="str">Harmonic&quot;</span> <span class="sym">%</span> sums5
