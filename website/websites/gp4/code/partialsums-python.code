    sums0 <span class="sym">=</span> sums1 <span class="sym">=</span> sums2 <span class="sym">=</span> sums3 <span class="sym">=</span> sums4 <span class="sym">=</span> sums5 <span class="sym">=</span> \
            sums6 <span class="sym">=</span> sums7 <span class="sym">=</span> sums8 <span class="sym">=</span> <span class="num">0.0</span>
    _sin <span class="sym">=</span> sin
