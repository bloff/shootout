    <span class="kwb">print</span> <span class="str">&quot;%0.9f</span><span class="esc">\t</span><span class="str">Alternating Harmonic&quot;</span> <span class="sym">%</span> sums7
    <span class="kwb">print</span> <span class="str">&quot;%0.9f</span><span class="esc">\t</span><span class="str">Gregory&quot;</span> <span class="sym">%</span> sums8

<span class="kwd">doit</span><span class="sym">()</span>
