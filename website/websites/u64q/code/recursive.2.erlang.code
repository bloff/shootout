<span class="hl sym">-</span><span class="hl kwa">module</span><span class="hl sym">(</span>recursive<span class="hl sym">).</span>
<span class="hl sym">-</span><span class="hl kwa">export</span><span class="hl sym">([</span>main<span class="hl sym">/</span><span class="hl num">1</span><span class="hl sym">]).</span>

<span class="hl kwd">fibF</span><span class="hl sym">(</span>N<span class="hl sym">)</span> <span class="hl kwa">when</span> <span class="hl kwd">is_float</span><span class="hl sym">(</span>N<span class="hl sym">),</span> N<span class="hl sym">&lt;</span><span class="hl num">2.0</span><span class="hl sym">-&gt;</span> <span class="hl num">1.0</span><span class="hl sym">;</span>
<span class="hl kwd">fibF</span><span class="hl sym">(</span>N<span class="hl sym">)</span> <span class="hl kwa">when</span> <span class="hl kwd">is_float</span><span class="hl sym">(</span>N<span class="hl sym">)-&gt;</span> <span class="hl kwd">fibF</span><span class="hl sym">(</span>N<span class="hl sym">-</span><span class="hl num">2.0</span><span class="hl sym">) +</span> <span class="hl kwd">fibF</span><span class="hl sym">(</span>N<span class="hl sym">-</span><span class="hl num">1.0</span><span class="hl sym">).</span>
<span class="hl kwd">fibI</span><span class="hl sym">(</span>N<span class="hl sym">)</span> <span class="hl kwa">when</span> <span class="hl kwd">is_integer</span><span class="hl sym">(</span>N<span class="hl sym">),</span> N<span class="hl sym">&lt;</span><span class="hl num">2</span><span class="hl sym">-&gt;</span> <span class="hl num">1</span><span class="hl sym">;</span>
<span class="hl kwd">fibI</span><span class="hl sym">(</span>N<span class="hl sym">)</span> <span class="hl kwa">when</span> <span class="hl kwd">is_integer</span><span class="hl sym">(</span>N<span class="hl sym">)-&gt;</span> <span class="hl kwd">fibI</span><span class="hl sym">(</span>N<span class="hl sym">-</span><span class="hl num">2</span><span class="hl sym">) +</span> <span class="hl kwd">fibI</span><span class="hl sym">(</span>N<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">).</span>

<span class="hl kwd">ack</span><span class="hl sym">(</span><span class="hl num">0</span><span class="hl sym">,</span>Y<span class="hl sym">)</span> <span class="hl kwa">when</span> <span class="hl kwd">is_integer</span><span class="hl sym">(</span>Y<span class="hl sym">)-&gt;</span> Y<span class="hl sym">+</span><span class="hl num">1</span><span class="hl sym">;</span>
<span class="hl kwd">ack</span><span class="hl sym">(</span>X<span class="hl sym">,</span><span class="hl num">0</span><span class="hl sym">)</span> <span class="hl kwa">when</span> <span class="hl kwd">is_integer</span><span class="hl sym">(</span>X<span class="hl sym">)-&gt;</span> <span class="hl kwd">ack</span><span class="hl sym">(</span>X<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">,</span><span class="hl num">1</span><span class="hl sym">);</span>
<span class="hl kwd">ack</span><span class="hl sym">(</span>X<span class="hl sym">,</span>Y<span class="hl sym">)</span> <span class="hl kwa">when</span> <span class="hl kwd">is_integer</span><span class="hl sym">(</span>X<span class="hl sym">),</span> <span class="hl kwd">is_integer</span><span class="hl sym">(</span>Y<span class="hl sym">)-&gt;</span> <span class="hl kwd">ack</span><span class="hl sym">(</span>X<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">,</span> <span class="hl kwd">ack</span><span class="hl sym">(</span>X<span class="hl sym">,</span>Y<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">)).</span>

<span class="hl slc">%Only used for small numbers -&gt; don't optimize for float!</span>
<span class="hl kwd">tak</span><span class="hl sym">(</span>X<span class="hl sym">,</span> Y<span class="hl sym">,</span> Z<span class="hl sym">)</span> <span class="hl kwa">when</span> Y <span class="hl sym">&lt;</span> X<span class="hl sym">-&gt;</span> <span class="hl kwd">tak</span><span class="hl sym">(</span><span class="hl kwd">tak</span><span class="hl sym">(</span>X<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">,</span>Y<span class="hl sym">,</span>Z<span class="hl sym">),</span> <span class="hl kwd">tak</span><span class="hl sym">(</span>Y<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">,</span>Z<span class="hl sym">,</span>X<span class="hl sym">),</span> <span class="hl kwd">tak</span><span class="hl sym">(</span>Z<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">,</span>X<span class="hl sym">,</span>Y<span class="hl sym">));</span>
<span class="hl kwd">tak</span><span class="hl sym">(</span>_<span class="hl sym">,</span> _<span class="hl sym">,</span> Z<span class="hl sym">) -&gt;</span> Z<span class="hl sym">.</span>

<span class="hl kwd">main</span><span class="hl sym">([</span>Arg<span class="hl sym">]) -&gt;</span>
    N <span class="hl sym">=</span> <span class="hl kwb">list_to_integer</span><span class="hl sym">(</span>Arg<span class="hl sym">),</span> M<span class="hl sym">=</span>N<span class="hl sym">-</span><span class="hl num">1</span><span class="hl sym">,</span>
    io<span class="hl sym">:</span><span class="hl kwd">fwrite</span><span class="hl sym">(</span><span class="hl str">&quot;Ack(3,~w): ~w</span><span class="hl esc">\</span><span class="hl str">n&quot;</span><span class="hl sym">, [</span>N<span class="hl sym">,</span> <span class="hl kwd">ack</span><span class="hl sym">(</span><span class="hl num">3</span><span class="hl sym">,</span> N<span class="hl sym">)]),</span>
    io<span class="hl sym">:</span><span class="hl kwd">fwrite</span><span class="hl sym">(</span><span class="hl str">&quot;Fib(~.1f): ~.1f</span><span class="hl esc">\</span><span class="hl str">n&quot;</span><span class="hl sym">, [</span><span class="hl num">27.0</span><span class="hl sym">+</span>N<span class="hl sym">,</span> <span class="hl kwd">fibF</span><span class="hl sym">(</span><span class="hl num">27.0</span><span class="hl sym">+</span>N<span class="hl sym">)]),</span>
    io<span class="hl sym">:</span><span class="hl kwd">fwrite</span><span class="hl sym">(</span><span class="hl str">&quot;Tak(~w,~w,~w): ~w</span><span class="hl esc">\</span><span class="hl str">n&quot;</span><span class="hl sym">, [</span>M<span class="hl sym">*</span><span class="hl num">3</span><span class="hl sym">,</span>M<span class="hl sym">*</span><span class="hl num">2</span><span class="hl sym">,</span>M<span class="hl sym">,</span> <span class="hl kwd">tak</span><span class="hl sym">(</span>M<span class="hl sym">*</span><span class="hl num">3</span><span class="hl sym">,</span>M<span class="hl sym">*</span><span class="hl num">2</span><span class="hl sym">,</span>M<span class="hl sym">)]),</span>
    io<span class="hl sym">:</span><span class="hl kwd">fwrite</span><span class="hl sym">(</span><span class="hl str">&quot;Fib(3): ~w</span><span class="hl esc">\</span><span class="hl str">n&quot;</span><span class="hl sym">, [</span><span class="hl kwd">fibI</span><span class="hl sym">(</span><span class="hl num">3</span><span class="hl sym">)]),</span>
    io<span class="hl sym">:</span><span class="hl kwd">fwrite</span><span class="hl sym">(</span><span class="hl str">&quot;Tak(3.0,2.0,1.0): ~.1f</span><span class="hl esc">\</span><span class="hl str">n&quot;</span><span class="hl sym">, [</span><span class="hl kwd">tak</span><span class="hl sym">(</span><span class="hl num">3.0</span><span class="hl sym">,</span><span class="hl num">2.0</span><span class="hl sym">,</span><span class="hl num">1.0</span><span class="hl sym">)]),</span>
    <span class="hl kwb">halt</span><span class="hl sym">(</span><span class="hl num">0</span><span class="hl sym">).</span>





