    <span class="hl kwb">sub_atom</span><span class="hl sym">(</span>ALU<span class="hl sym">,</span> Q<span class="hl sym">,</span> L1<span class="hl sym">,</span> _<span class="hl sym">,</span> Lineout<span class="hl sym">),</span> Q1 <span class="hl kwa">is</span> L1 <span class="hl sym">+</span> Q
