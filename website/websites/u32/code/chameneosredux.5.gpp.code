         <span class="hl kwa">if</span> <span class="hl sym">(</span> <span class="hl kwd">CPU_ISSET</span><span class="hl sym">(</span> i<span class="hl sym">, &amp;</span>cs <span class="hl sym">) ) {</span>
            <span class="hl kwd">CPU_SET</span><span class="hl sym">(</span> i<span class="hl sym">, &amp;</span>affinities<span class="hl sym">[</span>count <span class="hl sym">/</span> perslot<span class="hl sym">] );</span>
            count<span class="hl sym">++;</span>
