#<span class="sym">!/</span>usr<span class="sym">/</span>bin<span class="sym">/</span>newlisp

# heapsort <span class="sym">-</span> benchmark
#
# note<span class="sym">,</span> that newLISP has fast built<span class="sym">-</span>in sort <span class="kwa">and</span> random algorithms
# <span class="kwa">not</span> used in this <span class="sym">-</span> same way <span class="sym">-</span> benchmark
#

<span class="sym">(</span><span class="kwa">set</span> <span class="str">'IM 139968)
(set '</span>IA <span class="num">3877</span><span class="sym">)
(</span><span class="kwa">set</span> <span class="str">'IC 29573)

(set '</span>LAST <span class="num">42</span><span class="sym">)

(</span>define <span class="sym">(</span>gen_random maximum<span class="sym">)
	(</span><span class="kwa">set</span> <span class="str">'LAST (mod (add (mul LAST IA) IC) IM))
	(div (mul maximum LAST) IM))

(define (heapsort n ra)
	(set '</span>rra <span class="num">0</span> <span class="str">'i 0 '</span>j <span class="num">0</span><span class="sym">)
	(</span><span class="kwa">set</span> <span class="str">'l (+ (&gt;&gt; n 1) 1))
	(set '</span>ir n<span class="sym">)

	(</span><span class="kwa">while</span> <span class="sym">(</span><span class="kwa">not</span> done<span class="sym">)
		(</span><span class="kwa">if</span> <span class="sym">(&gt;</span> l <span class="num">1</span><span class="sym">)
 			(</span>begin
				<span class="sym">(</span>dec <span class="str">'l)
				(set '</span>rra <span class="sym">(</span><span class="kwa">nth</span> l ra<span class="sym">)))
			(</span>begin
				<span class="sym">(</span><span class="kwa">set</span> <span class="str">'rra (nth ir ra))
				(nth-set ir ra (nth 1 ra))
				(dec '</span>ir<span class="sym">)
				(</span><span class="kwa">if</span> <span class="sym">(=</span> ir <span class="num">1</span><span class="sym">)
					(</span>begin
						<span class="sym">(</span><span class="kwa">nth</span><span class="sym">-</span><span class="kwa">set</span> <span class="num">1</span> ra rra<span class="sym">)
						(</span><span class="kwa">set</span> <span class="str">'done true)
						; return
						ra))))
		(set '</span>i l<span class="sym">)
		(</span><span class="kwa">set</span> <span class="str">'j (&lt;&lt; l 1))
		(if (not done) (begin
 			(while (&lt;= j ir)
				(if (and (&lt; j ir) (&lt; (nth j ra) (nth (+ j 1) ra)))
					(inc '</span> j<span class="sym">))
				(</span><span class="kwa">if</span> <span class="sym">(&lt;</span> rra <span class="sym">(</span><span class="kwa">nth</span> j ra<span class="sym">))
					(</span>begin
						<span class="sym">(</span><span class="kwa">nth</span><span class="sym">-</span><span class="kwa">set</span> i ra <span class="sym">(</span><span class="kwa">nth</span> j ra<span class="sym">))
						(</span><span class="kwa">set</span> <span class="str">'i j)
						(inc '</span>j i<span class="sym">))
					(</span><span class="kwa">set</span> <span class="str">'j (+ ir 1))))
			(nth-set i ra rra))
		) ra))

(define (main)
	(set '</span>N <span class="sym">(</span>integer <span class="sym">(</span><span class="kwa">last</span> <span class="sym">(</span>main<span class="sym">-</span>args<span class="sym">))))

	(</span><span class="kwa">set</span> <span class="str">'ary (array (+ N 1)))

	(for (i 1 N) (nth-set i ary (gen_random 1.0)))

	(set '</span>ary <span class="sym">(</span>heapsort N ary<span class="sym">))

	(</span>println <span class="sym">(</span>format <span class="str">&quot;%.10f&quot;</span> <span class="sym">(</span><span class="kwa">nth</span> N ary<span class="sym">)))
)

(</span>main<span class="sym">)
(</span><span class="kwa">exit</span><span class="sym">)

