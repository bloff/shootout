<B><FONT COLOR="#A020F0">use</FONT></B> strict;
<B><FONT COLOR="#A020F0">use</FONT></B> integer;

<I><FONT COLOR="#B22222"># Comments by Ernesto Hernandez-Novich
</FONT></I><I><FONT COLOR="#B22222"># If memoization were allowed, we could gain some benefit by
</FONT></I><I><FONT COLOR="#B22222"># using:
</FONT></I><I><FONT COLOR="#B22222"># use Memoization;
