<span class="line">    5 </span><span class="kwa">local</span> text <span class="sym">=</span> io.<span class="kwa">read</span><span class="sym">(</span><span class="str">&quot;*a&quot;</span><span class="sym">)
</span><span class="line">    6 </span><span class="sym">
</span><span class="line">    7 </span><span class="sym"></span><span class="slc">-- make sure text does not start with a number
</span><span class="line">    8 </span><span class="slc"></span>text <span class="sym">=</span> <span class="str">&quot;</span><span class="esc">\n</span><span class="str">&quot;</span> .. text
<span class="line">    9 </span>
<span class="line">   10 </span><span class="slc">-- pattern is: not a digit, optional (, 3 digits, optional ),
</span><span class="line">   11 </span><span class="slc"></span><span class="slc">-- space, 3 digits, space or hyphen, 4 digits, not a digit
</span><span class="line">   12 </span><span class="slc"></span><span class="kwa">local</span> pattern <span class="sym">=</span> <span class="str">&quot;%D(%(?)(%d%d%d)(%)?) (%d%d%d)[- ](%d%d%d%d)%f[%D]&quot;</span>
<span class="line">   13 </span>
<span class="line">   14 </span><span class="kwa">local</span> N <span class="sym">=</span> <span class="kwa">tonumber</span><span class="sym">((</span>arg <span class="kwa">and</span> arg<span class="sym">[</span><span class="num">1</span><span class="sym">]))</span> <span class="kwa">or</span> <span class="num">1
</span><span class="line">   15 </span><span class="num"></span><span class="kwa">local</span> count <span class="sym">=</span> <span class="num">0
</span><span class="line">   16 </span><span class="num"></span><span class="kwa">for</span> i<span class="sym">=</span>N<span class="sym">,</span><span class="num">1</span><span class="sym">,-</span><span class="num">1</span> <span class="kwa">do
</span><span class="line">   17 </span><span class="kwa">  for</span> open<span class="sym">,</span>area<span class="sym">,</span>close<span class="sym">,</span>exch<span class="sym">,</span>digits <span class="kwa">in</span> <span class="kwb">string</span>.gfind<span class="sym">(</span>text<span class="sym">,</span> pattern<span class="sym">)</span> <span class="kwa">do
</span><span class="line">   18 </span><span class="kwa">      if</span> <span class="sym">(</span>open <span class="sym">==</span> <span class="str">'('</span><span class="sym">) == (</span>close <span class="sym">==</span> <span class="str">')'</span><span class="sym">)</span> <span class="kwa">then
</span><span class="line">   19 </span><span class="kwa">        local</span> tel <span class="sym">=</span> <span class="str">&quot;(&quot;</span>..area..<span class="str">&quot;) &quot;</span>..exch..<span class="str">&quot;-&quot;</span>..digits
<span class="line">   20 </span>        <span class="kwa">if</span> i <span class="sym">==</span> <span class="num">1</span> <span class="kwa">then
</span><span class="line">   21 </span><span class="kwa"></span>          count <span class="sym">=</span> count<span class="sym">+</span><span class="num">1
</span><span class="line">   22 </span><span class="num"></span>          io.<span class="kwa">write</span><span class="sym">(</span>count<span class="sym">,</span> <span class="str">&quot;: &quot;</span><span class="sym">,</span> tel<span class="sym">,</span> <span class="str">&quot;</span><span class="esc">\n</span><span class="str">&quot;</span><span class="sym">)
</span><span class="line">   23 </span><span class="sym"></span>        <span class="kwa">end
</span><span class="line">   24 </span><span class="kwa">      end
</span><span class="line">   25 </span><span class="kwa">    end
