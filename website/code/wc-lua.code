<table width="100%" border="0" cellpadding="5" cellspacing="0"><tr><td bgcolor="#FFFFFF"><pre>
<I><FONT COLOR="#B22222">-- $Id: wc-lua.code,v 1.2 2004-11-08 08:15:54 bfulgham Exp $
</FONT></I><I><FONT COLOR="#B22222">-- http://www.bagley.org/~doug/shootout/
</FONT></I><I><FONT COLOR="#B22222">-- from Roberto Ierusalimschy
</FONT></I>
BUFSIZE <B><FONT COLOR="#5F9EA0">=</FONT></B> 2^12

<B><FONT COLOR="#A020F0">local</FONT></B> cc,lc,wc <B><FONT COLOR="#5F9EA0">=</FONT></B> 0,0,0
<B><FONT COLOR="#A020F0">while</FONT></B> 1 <B><FONT COLOR="#A020F0">do</FONT></B>
    <B><FONT COLOR="#A020F0">local</FONT></B> lines, rest <B><FONT COLOR="#5F9EA0">=</FONT></B> io.read(BUFSIZE, <B><FONT COLOR="#BC8F8F">&quot;*l&quot;</FONT></B>)
    <B><FONT COLOR="#A020F0">if</FONT></B> lines <B><FONT COLOR="#5F9EA0">==</FONT></B> <B><FONT COLOR="#A020F0">nil</FONT></B> <B><FONT COLOR="#A020F0">then</FONT></B> <B><FONT COLOR="#A020F0">break</FONT></B> <B><FONT COLOR="#A020F0">end</FONT></B>
    <B><FONT COLOR="#A020F0">if</FONT></B> rest <B><FONT COLOR="#A020F0">then</FONT></B> lines <B><FONT COLOR="#5F9EA0">=</FONT></B> lines..rest..<B><FONT COLOR="#BC8F8F">'\n'</FONT></B> <B><FONT COLOR="#A020F0">end</FONT></B>
    cc <B><FONT COLOR="#5F9EA0">=</FONT></B> cc<B><FONT COLOR="#5F9EA0">+</FONT></B>string.len(lines)
    <B><FONT COLOR="#A020F0">local</FONT></B> _,t <B><FONT COLOR="#5F9EA0">=</FONT></B> string.gsub(lines, <B><FONT COLOR="#BC8F8F">&quot;%S+&quot;</FONT></B>, <B><FONT COLOR="#BC8F8F">&quot;&quot;</FONT></B>)   <I><FONT COLOR="#B22222">-- count words in the line
</FONT></I>    wc <B><FONT COLOR="#5F9EA0">=</FONT></B> wc<B><FONT COLOR="#5F9EA0">+</FONT></B>t
    _,t <B><FONT COLOR="#5F9EA0">=</FONT></B> string.gsub(lines, <B><FONT COLOR="#BC8F8F">&quot;\n&quot;</FONT></B>, <B><FONT COLOR="#BC8F8F">&quot;\n&quot;</FONT></B>)   <I><FONT COLOR="#B22222">-- count newlines in the line
</FONT></I>    lc <B><FONT COLOR="#5F9EA0">=</FONT></B> lc<B><FONT COLOR="#5F9EA0">+</FONT></B>t
<B><FONT COLOR="#A020F0">end</FONT></B>

io.write(lc, <B><FONT COLOR="#BC8F8F">&quot; &quot;</FONT></B>, wc, <B><FONT COLOR="#BC8F8F">&quot; &quot;</FONT></B>, cc, <B><FONT COLOR="#BC8F8F">&quot;\n&quot;</FONT></B>)</pre></td></tr></table>
