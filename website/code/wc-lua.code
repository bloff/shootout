<span class="line">    5 </span>BUFSIZE <span class="sym">=</span> <span class="num">2</span>^<span class="num">12
</span><span class="line">    6 </span><span class="num">
</span><span class="line">    7 </span><span class="num"></span><span class="kwa">local</span> cc<span class="sym">,</span>lc<span class="sym">,</span>wc <span class="sym">=</span> <span class="num">0</span><span class="sym">,</span><span class="num">0</span><span class="sym">,</span><span class="num">0
</span><span class="line">    8 </span><span class="num"></span><span class="kwa">while</span> <span class="num">1</span> <span class="kwa">do
</span><span class="line">    9 </span><span class="kwa">    local</span> lines<span class="sym">,</span> rest <span class="sym">=</span> io.<span class="kwa">read</span><span class="sym">(</span>BUFSIZE<span class="sym">,</span> <span class="str">&quot;*l&quot;</span><span class="sym">)
</span><span class="line">   10 </span><span class="sym"></span>    <span class="kwa">if</span> lines <span class="sym">==</span> <span class="kwa">nil then break end
</span><span class="line">   11 </span><span class="kwa">    if</span> rest <span class="kwa">then</span> lines <span class="sym">=</span> lines..rest..<span class="str">'</span><span class="esc">\n</span><span class="str">'</span> <span class="kwa">end
</span><span class="line">   12 </span><span class="kwa"></span>    cc <span class="sym">=</span> cc<span class="sym">+</span><span class="kwb">string</span>.len<span class="sym">(</span>lines<span class="sym">)
</span><span class="line">   13 </span><span class="sym"></span>    <span class="kwa">local</span> _<span class="sym">,</span>t <span class="sym">=</span> <span class="kwb">string</span>.<span class="kwa">gsub</span><span class="sym">(</span>lines<span class="sym">,</span> <span class="str">&quot;%S+&quot;</span><span class="sym">,</span> <span class="str">&quot;&quot;</span><span class="sym">)</span>   <span class="slc">-- count words in the line
</span><span class="line">   14 </span><span class="slc"></span>    wc <span class="sym">=</span> wc<span class="sym">+</span>t
<span class="line">   15 </span>    _<span class="sym">,</span>t <span class="sym">=</span> <span class="kwb">string</span>.<span class="kwa">gsub</span><span class="sym">(</span>lines<span class="sym">,</span> <span class="str">&quot;</span><span class="esc">\n</span><span class="str">&quot;</span><span class="sym">,</span> <span class="str">&quot;</span><span class="esc">\n</span><span class="str">&quot;</span><span class="sym">)</span>   <span class="slc">-- count newlines in the line
</span><span class="line">   16 </span><span class="slc"></span>    lc <span class="sym">=</span> lc<span class="sym">+</span>t
