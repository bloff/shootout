      <span class="kwb">for</span> body<span class="sym">(</span>x<span class="sym">:</span>X y<span class="sym">:</span>Y z<span class="sym">:</span>Z vx<span class="sym">:</span>_ vy<span class="sym">:</span>_ vz<span class="sym">:</span>_ mass<span class="sym">:</span>MASS<span class="sym">)</span> <span class="kwb">in</span> <span class="sym">{</span>List.drop Bodies &#64;Idx<span class="sym">}</span> <span class="kwb">do</span>
