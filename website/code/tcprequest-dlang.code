    <span class="kwb">T</span>cp<span class="kwb">S</span>ocket ts <span class="sym">=</span> <span class="kwa">new</span> <span class="kwb">T</span>cp<span class="kwb">S</span>ocket<span class="sym">(</span><span class="kwa">new</span> <span class="kwb">I</span>nternet<span class="kwb">A</span>ddress<span class="sym">(</span><span class="str">&quot;127.0.0.1&quot;</span><span class="sym">,</span><span class="kwb">PORT</span><span class="sym">));</span>

