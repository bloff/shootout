<B><FONT COLOR="#A020F0">function</FONT></B> mkmatrix(mx, rows, cols) {
    count = 1;
    <B><FONT COLOR="#A020F0">for</FONT></B> (i=0; i&lt;rows; i++) {
	<B><FONT COLOR="#A020F0">for</FONT></B> (j=0; j&lt;cols; j++) {
	    mx[i,j] = count++;
	}
    }
}

<B><FONT COLOR="#A020F0">function</FONT></B> mmult(rows, cols, m1, m2, m3) {
    <B><FONT COLOR="#A020F0">for</FONT></B> (i=0; i&lt;rows; i++) {
	<B><FONT COLOR="#A020F0">for</FONT></B> (j=0; j&lt;cols; j++) {
	    val = 0;
	    <B><FONT COLOR="#A020F0">for</FONT></B> (k=0; k&lt;cols; k++) {
		val += m1[i,k] * m2[k,j];
	    }
	    m3[i,j] = val;
	}
    }
}


<B><FONT COLOR="#A020F0">BEGIN</FONT></B> {
    n = (<B><FONT COLOR="#A020F0">ARGV</FONT></B>[1] &lt; 1) ? 1 : <B><FONT COLOR="#A020F0">ARGV</FONT></B>[1];
    size = 30;
    m1[0,0] = 0;
    m2[0,0] = 0;
    mkmatrix(m1, size, size);
    mkmatrix(m2, size, size);
    mm[0,0] = 0;
    <B><FONT COLOR="#A020F0">for</FONT></B> (i=0; i&lt;n; i++) {
	mmult(size, size, m1, m2, mm);
    }
    <B><FONT COLOR="#A020F0">printf</FONT></B>(<B><FONT COLOR="#BC8F8F">&quot;%d %d %d %d\n&quot;</FONT></B>, mm[0,0], mm[2,3], mm[3,2], mm[4,4]);
    <B><FONT COLOR="#A020F0">exit</FONT></B>;
}</pre></td></tr></table>
