<I><FONT COLOR="#B22222">%%% -*- mode: erlang -*-
</FONT></I><I><FONT COLOR="#B22222">%%% $Id: random-erlang.code,v 1.2 2004-11-08 08:15:18 bfulgham Exp $
</FONT></I><I><FONT COLOR="#B22222">%%% http://www.bagley.org/~doug/shootout/
</FONT></I>
<B><FONT COLOR="#5F9EA0">-module</FONT></B>(random).
<B><FONT COLOR="#5F9EA0">-export</FONT></B>([main/1]).

<B><FONT COLOR="#0000FF">main</FONT></B>() -&gt; main([<B><FONT COLOR="#BC8F8F">'1'</FONT></B>]).
<B><FONT COLOR="#0000FF">main</FONT></B>([<FONT COLOR="#B8860B">Arg</FONT>]) -&gt;
    <FONT COLOR="#B8860B">N</FONT> = <B><FONT COLOR="#A020F0">list_to_integer</FONT></B>(<B><FONT COLOR="#A020F0">atom_to_list</FONT></B>(<FONT COLOR="#B8860B">Arg</FONT>)),
    io:fwrite(<B><FONT COLOR="#BC8F8F">&quot;~.9f\n&quot;</FONT></B>, [rand(<FONT COLOR="#B8860B">N</FONT>, 42, 0.0, 100.0)]),
    <B><FONT COLOR="#A020F0">halt</FONT></B>(0).


<B><FONT COLOR="#5F9EA0">-define</FONT></B>(<B><FONT COLOR="#DA70D6">IM</FONT></B>, 139968).
<B><FONT COLOR="#5F9EA0">-define</FONT></B>(<B><FONT COLOR="#DA70D6">IA</FONT></B>, 3877).
<B><FONT COLOR="#5F9EA0">-define</FONT></B>(<B><FONT COLOR="#DA70D6">IC</FONT></B>, 29573).


<B><FONT COLOR="#0000FF">rand</FONT></B>(0, <FONT COLOR="#B8860B">_</FONT>, <FONT COLOR="#B8860B">Rand</FONT>, <FONT COLOR="#B8860B">_</FONT>) -&gt; <FONT COLOR="#B8860B">Rand</FONT>;
<B><FONT COLOR="#0000FF">rand</FONT></B>(<FONT COLOR="#B8860B">N</FONT>, <FONT COLOR="#B8860B">Seed</FONT>, <FONT COLOR="#B8860B">Rand</FONT>, <FONT COLOR="#B8860B">Max</FONT>) -&gt;
    <FONT COLOR="#B8860B">NewSeed</FONT> = (<FONT COLOR="#B8860B">Seed</FONT> * ?<B><FONT COLOR="#DA70D6">IA</FONT></B> + ?<B><FONT COLOR="#DA70D6">IC</FONT></B>) rem ?<B><FONT COLOR="#DA70D6">IM</FONT></B>,
    <FONT COLOR="#B8860B">NewRand</FONT> = <FONT COLOR="#B8860B">Max</FONT> * <FONT COLOR="#B8860B">NewSeed</FONT> / ?<B><FONT COLOR="#DA70D6">IM</FONT></B>,
    rand(<FONT COLOR="#B8860B">N</FONT>-1, <FONT COLOR="#B8860B">NewSeed</FONT>, <FONT COLOR="#B8860B">NewRand</FONT>, <FONT COLOR="#B8860B">Max</FONT>).</pre></td></tr></table>
