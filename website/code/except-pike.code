</FONT></I>
<I><FONT COLOR="#B22222">// this version requires Pike 7.1
</FONT></I>
class <B><FONT COLOR="#0000FF">HiException</FONT></B>( mixed value ) { constant IsHi = 1; }
class <B><FONT COLOR="#0000FF">LoException</FONT></B>( mixed value ) { constant IsLo = 1; }

<B><FONT COLOR="#228B22">void</FONT></B> <B><FONT COLOR="#0000FF">some_function</FONT></B>( <B><FONT COLOR="#228B22">int</FONT></B> num )
{
    <B><FONT COLOR="#A020F0">if</FONT></B>( mixed e = catch(  hi_function( num ) ) )
	error( <B><FONT COLOR="#BC8F8F">&quot;We shouldn't get here (%s)&quot;</FONT></B>, describe_error( e ) );
}
  
<B><FONT COLOR="#228B22">int</FONT></B> HI, LO;

<B><FONT COLOR="#228B22">void</FONT></B> <B><FONT COLOR="#0000FF">hi_function</FONT></B>(<B><FONT COLOR="#228B22">int</FONT></B> num)
{
    <B><FONT COLOR="#A020F0">if</FONT></B>( mixed e = catch( lo_function( num ) ) )
	<B><FONT COLOR="#A020F0">if</FONT></B>( e-&gt;IsHi )
	    HI++;
	<B><FONT COLOR="#A020F0">else</FONT></B>
	    throw( e );
}
  
<B><FONT COLOR="#228B22">void</FONT></B> <B><FONT COLOR="#0000FF">lo_function</FONT></B>(<B><FONT COLOR="#228B22">int</FONT></B> num)
{
    <B><FONT COLOR="#A020F0">if</FONT></B>( mixed e = catch(  blowup(num) ) )
	<B><FONT COLOR="#A020F0">if</FONT></B>( e-&gt;IsLo )
	    LO++;
	<B><FONT COLOR="#A020F0">else</FONT></B>
	    throw( e );
}
  
  
<B><FONT COLOR="#228B22">void</FONT></B> <B><FONT COLOR="#0000FF">blowup</FONT></B>(<B><FONT COLOR="#228B22">int</FONT></B> num)
{
    <B><FONT COLOR="#A020F0">if</FONT></B>( num &amp; 1 )
	throw( LoException(num) );
    <B><FONT COLOR="#A020F0">else</FONT></B>
	throw( HiException(num) );
}
  
<B><FONT COLOR="#228B22">void</FONT></B> <B><FONT COLOR="#0000FF">main</FONT></B>(<B><FONT COLOR="#228B22">int</FONT></B> argc, array argv)
{
    <B><FONT COLOR="#228B22">int</FONT></B> num = (<B><FONT COLOR="#228B22">int</FONT></B>)argv[-1];
    <B><FONT COLOR="#A020F0">if</FONT></B>( num &lt; 1 )
	num = 1;
    <B><FONT COLOR="#A020F0">while</FONT></B>(num)
	some_function( num-- );
    write( <B><FONT COLOR="#BC8F8F">&quot;Exceptions: HI=%d / LO=%d\n&quot;</FONT></B> , HI, LO );
}</pre></td></tr></table>
