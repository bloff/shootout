<I><FONT COLOR="#B22222">%%  Usage: start from command line with
</FONT></I><I><FONT COLOR="#B22222">%%     ozc -x strcat.oz -o strcat.oz.exe
</FONT></I><I><FONT COLOR="#B22222">%%     strcat.oz.exe 40000
</FONT></I>
<B><FONT COLOR="#228B22">functor</FONT></B>
<B><FONT COLOR="#5F9EA0">import</FONT></B> System Application

<B><FONT COLOR="#A020F0">define</FONT></B>

<B><FONT COLOR="#A020F0">fun</FONT></B> {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">RepeatAppend</FONT></I></B></FONT></B> N S}
   <B><FONT COLOR="#A020F0">if</FONT></B> N <B><FONT COLOR="#5F9EA0">==</FONT></B> 0 <B><FONT COLOR="#A020F0">then</FONT></B> S <B><FONT COLOR="#A020F0">else</FONT></B>
      {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">RepeatAppend</FONT></I></B></FONT></B> N-1 {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">Append</FONT></I></B></FONT></B> <B><FONT COLOR="#BC8F8F">&quot;hello\n&quot;</FONT></B> S}} <B><FONT COLOR="#A020F0">end</FONT></B>
<B><FONT COLOR="#A020F0">end</FONT></B>

<B><FONT COLOR="#A020F0">in</FONT></B>
   <B><FONT COLOR="#5F9EA0">local</FONT></B> Args N <B><FONT COLOR="#A020F0">in</FONT></B> 
      [Args] <B><FONT COLOR="#5F9EA0">=</FONT></B> {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">Application</FONT></I></B></FONT></B>.getArgs plain}
      N <B><FONT COLOR="#5F9EA0">=</FONT></B> {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">String</FONT></I></B></FONT></B>.toInt Args}

      {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">System</FONT></I></B></FONT></B>.showInfo {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">Length</FONT></I></B></FONT></B> {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">RepeatAppend</FONT></I></B></FONT></B> N <B><FONT COLOR="#228B22">nil</FONT></B>}} }
   <B><FONT COLOR="#A020F0">end</FONT></B>
   {<B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">Application</FONT></I></B></FONT></B>.exit 0}
<B><FONT COLOR="#A020F0">end</FONT></B></pre></td></tr></table>
