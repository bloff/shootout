<span class="kwa">import</span> std<span class="sym">.</span>date<span class="sym">,</span> std<span class="sym">.</span>stdio<span class="sym">;</span>

<span class="kwa">int</span> <span class="kwd">main</span><span class="sym">()</span>
<span class="sym">{</span>
