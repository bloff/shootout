<span class="kwc">typedef</span> <span class="kwb">double</span> Celestial<span class="sym">[</span><span class="num">7</span><span class="sym">];</span>
<span class="kwb">enum</span> <span class="sym">{</span> pX<span class="sym">,</span> pY<span class="sym">,</span> pZ<span class="sym">,</span>     vX<span class="sym">,</span> vY<span class="sym">,</span> vZ<span class="sym">,</span>    Mass <span class="sym">};</span>

