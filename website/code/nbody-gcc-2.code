  <span class="num">1.66007664274403694e-03</span><span class="sym">*</span>DAYS<span class="sym">,</span> <span class="num">7.69901118419740425e-03</span><span class="sym">*</span>DAYS<span class="sym">, -</span><span class="num">6.90460016972063023e-05</span><span class="sym">*</span>DAYS<span class="sym">,</span>
  <span class="num">9.54791938424326609e-04</span><span class="sym">*</span>SUNMASS<span class="sym">,</span>
 <span class="sym">},</span>
 <span class="sym">{</span> <span class="slc">// Saturn</span>
  <span class="num">8.34336671824457987e+00</span><span class="sym">,</span>      <span class="num">4.12479856412430479e+00</span><span class="sym">,      -</span><span class="num">4.03523417114321381e-01</span><span class="sym">,</span>
 <span class="sym">-</span><span class="num">2.76742510726862411e-03</span><span class="sym">*</span>DAYS<span class="sym">,</span> <span class="num">4.99852801234917238e-03</span><span class="sym">*</span>DAYS<span class="sym">,</span>  <span class="num">2.30417297573763929e-05</span><span class="sym">*</span>DAYS<span class="sym">,</span>
  <span class="num">2.85885980666130812e-04</span><span class="sym">*</span>SUNMASS<span class="sym">,</span>
 <span class="sym">},</span>
 <span class="sym">{</span> <span class="slc">// Uranus</span>
