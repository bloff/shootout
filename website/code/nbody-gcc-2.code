 <span class="kwd">init</span><span class="sym">(</span>nbodies<span class="sym">);</span>
 <span class="kwd">printf</span><span class="sym">(</span><span class="str">&quot;%.9f</span><span class="esc">\n</span><span class="str">&quot;</span><span class="sym">,</span> <span class="kwd">energy</span><span class="sym">(</span>nbodies<span class="sym">));</span>
 <span class="kwa">for</span><span class="sym">(</span>i<span class="sym">=</span><span class="num">0</span><span class="sym">;</span> i<span class="sym">&lt;</span>nsteps<span class="sym">;</span> i<span class="sym">++)</span>
    <span class="kwd">advance</span><span class="sym">(</span>nbodies<span class="sym">,</span> <span class="num">0.01</span><span class="sym">);</span>
 <span class="kwd">printf</span><span class="sym">(</span><span class="str">&quot;%.9f</span><span class="esc">\n</span><span class="str">&quot;</span><span class="sym">,</span> <span class="kwd">energy</span><span class="sym">(</span>nbodies<span class="sym">));</span>
