 <span class="kwb">void</span> <span class="kwd">init</span><span class="sym">(</span><span class="kwb">int</span> n<span class="sym">)</span>
<span class="sym">{</span>
 <span class="kwb">double</span> m<span class="sym">, *</span>pv<span class="sym">,</span> mom<span class="sym">[] = {</span><span class="num">0</span><span class="sym">,</span> <span class="num">0</span><span class="sym">,</span> <span class="num">0</span><span class="sym">};</span>
 <span class="kwb">int</span> i<span class="sym">,</span> j<span class="sym">;</span>

 <span class="kwa">for</span><span class="sym">(</span>i<span class="sym">=</span><span class="num">0</span><span class="sym">;</span> i<span class="sym">&lt;</span>n<span class="sym">;</span> i<span class="sym">++) {</span>
    pv <span class="sym">=</span> Bodies<span class="sym">[</span>i<span class="sym">]+</span>vX<span class="sym">,</span> m <span class="sym">=</span> Bodies<span class="sym">[</span>i<span class="sym">][</span>Mass<span class="sym">];</span>
    <span class="kwa">for</span><span class="sym">(</span>j<span class="sym">=</span><span class="num">0</span><span class="sym">;</span> j<span class="sym">&lt;</span><span class="num">3</span><span class="sym">;</span> j<span class="sym">++)</span> mom<span class="sym">[</span>j<span class="sym">] +=</span> pv<span class="sym">[</span>j<span class="sym">] *</span> m<span class="sym">;</span>
 <span class="sym">}</span>
 <span class="kwa">for</span><span class="sym">(</span>j<span class="sym">=</span><span class="num">0</span><span class="sym">;</span> j<span class="sym">&lt;</span><span class="num">3</span><span class="sym">;</span> j<span class="sym">++)</span>
    Bodies<span class="sym">[</span><span class="num">0</span><span class="sym">][</span>vX<span class="sym">+</span>j<span class="sym">] = -</span>mom<span class="sym">[</span>j<span class="sym">] /</span> Bodies<span class="sym">[</span><span class="num">0</span><span class="sym">][</span>Mass<span class="sym">];</span>
<span class="sym">}</span>

 <span class="kwb">double</span> <span class="kwd">energy</span><span class="sym">(</span><span class="kwb">int</span> n<span class="sym">)</span>
<span class="sym">{</span>
 <span class="kwb">double</span> e<span class="sym">,</span> d<span class="sym">, *</span>p<span class="sym">, *</span>q<span class="sym">;</span>
 <span class="kwb">int</span> i<span class="sym">,</span> j<span class="sym">;</span>

 <span class="kwa">for</span><span class="sym">(</span>i<span class="sym">=</span><span class="num">0</span><span class="sym">,</span>e<span class="sym">=</span><span class="num">0</span><span class="sym">;</span> i<span class="sym">&lt;</span>n<span class="sym">;</span> i<span class="sym">++) {</span>
    p <span class="sym">=</span> Bodies<span class="sym">[</span>i<span class="sym">];</span>
    e <span class="sym">+=</span> <span class="num">0.5</span> <span class="sym">*</span> p<span class="sym">[</span>Mass<span class="sym">] * (</span> <span class="kwd">sqr</span><span class="sym">(</span>p<span class="sym">[</span>vX<span class="sym">]) +</span> <span class="kwd">sqr</span><span class="sym">(</span>p<span class="sym">[</span>vY<span class="sym">]) +</span> <span class="kwd">sqr</span><span class="sym">(</span>p<span class="sym">[</span>vZ<span class="sym">]) );</span>
    <span class="kwa">for</span><span class="sym">(</span>j<span class="sym">=</span>i<span class="sym">+</span><span class="num">1</span><span class="sym">;</span> j<span class="sym">&lt;</span>n<span class="sym">;</span> j<span class="sym">++) {</span>
       q <span class="sym">=</span> Bodies<span class="sym">[</span>j<span class="sym">];</span>
       d <span class="sym">=</span> <span class="kwd">sqrt</span><span class="sym">(</span> <span class="kwd">sqr</span><span class="sym">(</span>p<span class="sym">[</span>pX<span class="sym">]-</span>q<span class="sym">[</span>pX<span class="sym">]) +</span> <span class="kwd">sqr</span><span class="sym">(</span>p<span class="sym">[</span>pY<span class="sym">]-</span>q<span class="sym">[</span>pY<span class="sym">]) +</span> <span class="kwd">sqr</span><span class="sym">(</span>p<span class="sym">[</span>pZ<span class="sym">]-</span>q<span class="sym">[</span>pZ<span class="sym">]) );</span>
       e <span class="sym">-=</span> p<span class="sym">[</span>Mass<span class="sym">] *</span> q<span class="sym">[</span>Mass<span class="sym">] /</span> d<span class="sym">;</span>
    <span class="sym">}</span>
  <span class="sym">}</span>
  <span class="kwa">return</span> e<span class="sym">;</span>
<span class="sym">}</span>

 <span class="kwb">void</span> <span class="kwd">advance</span><span class="sym">(</span><span class="kwb">int</span> n<span class="sym">,</span> <span class="kwb">double</span> dt<span class="sym">)</span>
<span class="sym">{</span>
 <span class="kwb">double</span> d<span class="sym">,</span> dx<span class="sym">,</span>dy<span class="sym">,</span>dz<span class="sym">,</span> mp<span class="sym">,</span> mq<span class="sym">,</span> mag<span class="sym">, *</span>p<span class="sym">, *</span>q<span class="sym">;</span>
 <span class="kwb">int</span> i<span class="sym">,</span> j<span class="sym">;</span>

 <span class="kwa">for</span><span class="sym">(</span>i<span class="sym">=</span><span class="num">0</span><span class="sym">;</span> i<span class="sym">&lt;</span>n<span class="sym">;</span> i<span class="sym">++) {</span>
    p  <span class="sym">=</span> Bodies<span class="sym">[</span>i<span class="sym">];</span>
    mp <span class="sym">=</span> p<span class="sym">[</span>Mass<span class="sym">];</span>
    <span class="kwa">for</span><span class="sym">(</span>j<span class="sym">=</span>i<span class="sym">+</span><span class="num">1</span><span class="sym">;</span> j<span class="sym">&lt;</span>n<span class="sym">;</span> j<span class="sym">++) {</span>
       q   <span class="sym">=</span> Bodies<span class="sym">[</span>j<span class="sym">];</span>
       mq  <span class="sym">=</span> q<span class="sym">[</span>Mass<span class="sym">];</span>
       dx  <span class="sym">=</span> p<span class="sym">[</span>pX<span class="sym">]-</span>q<span class="sym">[</span>pX<span class="sym">],</span> dy <span class="sym">=</span> p<span class="sym">[</span>pY<span class="sym">]-</span>q<span class="sym">[</span>pY<span class="sym">],</span> dz <span class="sym">=</span> p<span class="sym">[</span>pZ<span class="sym">]-</span>q<span class="sym">[</span>pZ<span class="sym">];</span>
       d   <span class="sym">=</span> <span class="kwd">sqrt</span><span class="sym">(</span> dx<span class="sym">*</span>dx <span class="sym">+</span> dy<span class="sym">*</span>dy <span class="sym">+</span> dz<span class="sym">*</span>dz <span class="sym">);</span>
       mag <span class="sym">=</span> dt <span class="sym">/ (</span>d <span class="sym">*</span> d <span class="sym">*</span> d<span class="sym">);</span>
       dx <span class="sym">*=</span> mag<span class="sym">,</span> dy <span class="sym">*=</span> mag<span class="sym">,</span> dz <span class="sym">*=</span> mag<span class="sym">;</span>
       p<span class="sym">[</span>vX<span class="sym">] -=</span> dx<span class="sym">*</span>mq<span class="sym">,</span>  p<span class="sym">[</span>vY<span class="sym">] -=</span> dy<span class="sym">*</span>mq<span class="sym">,</span>  p<span class="sym">[</span>vZ<span class="sym">] -=</span> dz<span class="sym">*</span>mq<span class="sym">,</span>
       q<span class="sym">[</span>vX<span class="sym">] +=</span> dx<span class="sym">*</span>mp<span class="sym">;</span>  q<span class="sym">[</span>vY<span class="sym">] +=</span> dy<span class="sym">*</span>mp<span class="sym">;</span>  q<span class="sym">[</span>vZ<span class="sym">] +=</span> dz<span class="sym">*</span>mp<span class="sym">;</span>
    <span class="sym">}</span>
 <span class="sym">}</span>

 <span class="kwa">for</span><span class="sym">(</span>i<span class="sym">=</span><span class="num">0</span><span class="sym">;</span> i<span class="sym">&lt;</span>n<span class="sym">;</span> i<span class="sym">++) {</span>
    <span class="kwa">for</span><span class="sym">(</span>j<span class="sym">=</span><span class="num">0</span><span class="sym">,</span>p<span class="sym">=</span>Bodies<span class="sym">[</span>i<span class="sym">];</span> j<span class="sym">&lt;</span><span class="num">3</span><span class="sym">;</span> j<span class="sym">++)</span>
       p<span class="sym">[</span>j<span class="sym">] +=</span> dt <span class="sym">*</span> p<span class="sym">[</span>vX<span class="sym">+</span>j<span class="sym">];</span>
 <span class="sym">}</span>
<span class="sym">}</span>

 <span class="kwb">int</span> <span class="kwd">main</span><span class="sym">(</span><span class="kwb">int</span> argc<span class="sym">,</span> <span class="kwb">char</span> <span class="sym">**</span>argv<span class="sym">)</span>
<span class="sym">{</span>
