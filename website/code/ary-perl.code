<B><FONT COLOR="#A020F0">my</FONT></B> $n = @ARGV[0] || 1;
<B><FONT COLOR="#A020F0">my</FONT></B> @X;
<B><FONT COLOR="#A020F0">my</FONT></B> @Y;

<B><FONT COLOR="#A020F0">my</FONT></B> $last = $n - 1;
<B><FONT COLOR="#A020F0">for</FONT></B> <B><FONT COLOR="#A020F0">my</FONT></B> $i (0..$last) {
    $X[$i] = $i + 1;
}
<B><FONT COLOR="#A020F0">for</FONT></B> <B><FONT COLOR="#A020F0">my</FONT></B> $k (0..999) {
    <B><FONT COLOR="#A020F0">for</FONT></B> <B><FONT COLOR="#A020F0">my</FONT></B> $i (<B><FONT COLOR="#A020F0">reverse</FONT></B> 0..$last) {
	$Y[$i] += $X[$i];
    }
}

<B><FONT COLOR="#A020F0">print</FONT></B> <B><FONT COLOR="#BC8F8F">&quot;$Y[0] $Y[$last]\n&quot;</FONT></B>;</pre></td></tr></table>
