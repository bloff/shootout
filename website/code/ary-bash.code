<table width="100%" border="0" cellpadding="5" cellspacing="0"><tr><td bgcolor="#FFFFFF"><pre>
<B><FONT COLOR="#5F9EA0">#!/bin/bash
</FONT></B><I><FONT COLOR="#B22222"># http://shootout.alioth.debian.org/
</FONT></I>
<I><FONT COLOR="#B22222"># this program is modified from:
</FONT></I><I><FONT COLOR="#B22222">#   http://cm.bell-labs.com/cm/cs/who/bwk/interps/pap.html
</FONT></I><I><FONT COLOR="#B22222"># Timing Trials, or, the Trials of Timing: Experiments with Scripting
</FONT></I><I><FONT COLOR="#B22222"># and User-Interface Languages by Brian W. Kernighan and
</FONT></I><I><FONT COLOR="#B22222"># Christopher J. Van Wyk.
</FONT></I>
<I><FONT COLOR="#B22222"># this version creates a $cnt vairable for the for loop
</FONT></I><I><FONT COLOR="#B22222"># Bash version (samething) by David Pyke JUL-20
</FONT></I>
n=${1:-1}

<B><FONT COLOR="#DA70D6">declare</FONT></B> -ai X
<B><FONT COLOR="#DA70D6">declare</FONT></B> -ai Y
<B><FONT COLOR="#DA70D6">declare</FONT></B> -i j
<B><FONT COLOR="#DA70D6">declare</FONT></B> -i i
<B><FONT COLOR="#DA70D6">declare</FONT></B> -i last

last=$(($n-1));
cnt=

i=0;
<B><FONT COLOR="#A020F0">while</FONT></B> [ $i -le $last  ] ; <B><FONT COLOR="#A020F0">do</FONT></B>
	j=$(($i+1));
	X[$i]=$j;
	cnt=<B><FONT COLOR="#BC8F8F">&quot;$i $cnt&quot;</FONT></B>
	i=$j;
<B><FONT COLOR="#A020F0">done</FONT></B>

k=0;
<B><FONT COLOR="#A020F0">while</FONT></B> [ $k -le 999  ] ; <B><FONT COLOR="#A020F0">do</FONT></B>

	<B><FONT COLOR="#A020F0">for</FONT></B> i <B><FONT COLOR="#A020F0">in</FONT></B> $cnt; <B><FONT COLOR="#A020F0">do</FONT></B>
		Y[$i]=$((${Y[$i]} + ${X[$i]}));
	<B><FONT COLOR="#A020F0">done</FONT></B>;

	k=$(( $k + 1));
<B><FONT COLOR="#A020F0">done</FONT></B>

<B><FONT COLOR="#DA70D6">echo</FONT></B> <B><FONT COLOR="#BC8F8F">&quot;${Y[0]} ${Y[$last]}&quot;</FONT></B>

</pre></td></tr></table>
