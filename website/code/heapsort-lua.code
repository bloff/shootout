</FONT></I>
<B><FONT COLOR="#A020F0">local</FONT></B> IM <B><FONT COLOR="#5F9EA0">=</FONT></B> 139968
<B><FONT COLOR="#A020F0">local</FONT></B> IA <B><FONT COLOR="#5F9EA0">=</FONT></B>   3877
<B><FONT COLOR="#A020F0">local</FONT></B> IC <B><FONT COLOR="#5F9EA0">=</FONT></B>  29573

<B><FONT COLOR="#A020F0">local</FONT></B> LAST <B><FONT COLOR="#5F9EA0">=</FONT></B> 42
<B><FONT COLOR="#A020F0">function </FONT></B><B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">gen_random</FONT></I></B></FONT></B> <B><FONT COLOR="#A020F0">(max)</FONT></B>
    LAST <B><FONT COLOR="#5F9EA0">=</FONT></B> math.mod((LAST <B><FONT COLOR="#5F9EA0">*</FONT></B> IA <B><FONT COLOR="#5F9EA0">+</FONT></B> IC), IM)
    <B><FONT COLOR="#A020F0">return</FONT></B>( (max <B><FONT COLOR="#5F9EA0">*</FONT></B> LAST) / IM )
<B><FONT COLOR="#A020F0">end</FONT></B>

<B><FONT COLOR="#A020F0">function </FONT></B><B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">heapsort</FONT></I></B></FONT></B> <B><FONT COLOR="#A020F0">(n, ra)</FONT></B>
    <B><FONT COLOR="#A020F0">local</FONT></B> j, i, rra
    <B><FONT COLOR="#A020F0">local</FONT></B> l <B><FONT COLOR="#5F9EA0">=</FONT></B> math.floor(n/2) <B><FONT COLOR="#5F9EA0">+</FONT></B> 1
    <B><FONT COLOR="#A020F0">local</FONT></B> ir <B><FONT COLOR="#5F9EA0">=</FONT></B> n;
    <B><FONT COLOR="#A020F0">while</FONT></B> 1 <B><FONT COLOR="#A020F0">do</FONT></B>
	<B><FONT COLOR="#A020F0">if</FONT></B> l <B><FONT COLOR="#5F9EA0">&gt;</FONT></B> 1 <B><FONT COLOR="#A020F0">then</FONT></B>
	    l <B><FONT COLOR="#5F9EA0">=</FONT></B> l <B><FONT COLOR="#5F9EA0">-</FONT></B> 1
	    rra <B><FONT COLOR="#5F9EA0">=</FONT></B> ra[l]
	<B><FONT COLOR="#A020F0">else</FONT></B>
	    rra <B><FONT COLOR="#5F9EA0">=</FONT></B> ra[ir]
	    ra[ir] <B><FONT COLOR="#5F9EA0">=</FONT></B> ra[1]
	    ir <B><FONT COLOR="#5F9EA0">=</FONT></B> ir <B><FONT COLOR="#5F9EA0">-</FONT></B> 1
	    <B><FONT COLOR="#A020F0">if</FONT></B> (ir <B><FONT COLOR="#5F9EA0">==</FONT></B> 1) <B><FONT COLOR="#A020F0">then</FONT></B>
		ra[1] <B><FONT COLOR="#5F9EA0">=</FONT></B> rra
		<B><FONT COLOR="#A020F0">return</FONT></B>
	    <B><FONT COLOR="#A020F0">end</FONT></B>
	<B><FONT COLOR="#A020F0">end</FONT></B>
	i <B><FONT COLOR="#5F9EA0">=</FONT></B> l
	j <B><FONT COLOR="#5F9EA0">=</FONT></B> l <B><FONT COLOR="#5F9EA0">*</FONT></B> 2
	<B><FONT COLOR="#A020F0">while</FONT></B> j <B><FONT COLOR="#5F9EA0">&lt;=</FONT></B> ir <B><FONT COLOR="#A020F0">do</FONT></B>
	    <B><FONT COLOR="#A020F0">if</FONT></B> (j <B><FONT COLOR="#5F9EA0">&lt;</FONT></B> ir) <B><FONT COLOR="#A020F0">and</FONT></B> (ra[j] <B><FONT COLOR="#5F9EA0">&lt;</FONT></B> ra[j<B><FONT COLOR="#5F9EA0">+</FONT></B>1]) <B><FONT COLOR="#A020F0">then</FONT></B>
		j <B><FONT COLOR="#5F9EA0">=</FONT></B> j <B><FONT COLOR="#5F9EA0">+</FONT></B> 1
	    <B><FONT COLOR="#A020F0">end</FONT></B>
	    <B><FONT COLOR="#A020F0">if</FONT></B> rra <B><FONT COLOR="#5F9EA0">&lt;</FONT></B> ra[j] <B><FONT COLOR="#A020F0">then</FONT></B>
		ra[i] <B><FONT COLOR="#5F9EA0">=</FONT></B> ra[j]
		i <B><FONT COLOR="#5F9EA0">=</FONT></B> j
		j <B><FONT COLOR="#5F9EA0">=</FONT></B> j <B><FONT COLOR="#5F9EA0">+</FONT></B> i
	    <B><FONT COLOR="#A020F0">else</FONT></B>
		j <B><FONT COLOR="#5F9EA0">=</FONT></B> ir <B><FONT COLOR="#5F9EA0">+</FONT></B> 1
	    <B><FONT COLOR="#A020F0">end</FONT></B>
	<B><FONT COLOR="#A020F0">end</FONT></B>
	ra[i] <B><FONT COLOR="#5F9EA0">=</FONT></B> rra
    <B><FONT COLOR="#A020F0">end</FONT></B>
<B><FONT COLOR="#A020F0">end</FONT></B>

<B><FONT COLOR="#A020F0">local</FONT></B> ary <B><FONT COLOR="#5F9EA0">=</FONT></B> {}
<B><FONT COLOR="#A020F0">local</FONT></B> N <B><FONT COLOR="#5F9EA0">=</FONT></B> (<B><FONT COLOR="#228B22">tonumber</FONT></B>((arg <B><FONT COLOR="#A020F0">and</FONT></B> arg[1])) <B><FONT COLOR="#A020F0">or</FONT></B> 1)

<B><FONT COLOR="#A020F0">for</FONT></B> i<B><FONT COLOR="#5F9EA0">=</FONT></B>1, N <B><FONT COLOR="#A020F0">do</FONT></B>
    ary[i] <B><FONT COLOR="#5F9EA0">=</FONT></B> gen_random(1.0)
<B><FONT COLOR="#A020F0">end</FONT></B>

heapsort(N, ary)

io.write(string.format(<B><FONT COLOR="#BC8F8F">&quot;%0.10f\n&quot;</FONT></B>, ary[N]))</pre></td></tr></table>
