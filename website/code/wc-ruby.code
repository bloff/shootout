nl = nw = nc = 0
<B><FONT COLOR="#A020F0">loop</FONT></B> <B><FONT COLOR="#A020F0">do</FONT></B>
  data = (STDIN.read(4096) <B><FONT COLOR="#A020F0">or</FONT></B> <B><FONT COLOR="#A020F0">break</FONT></B>) &lt;&lt; (STDIN.gets || <B><FONT COLOR="#BC8F8F">&quot;&quot;</FONT></B>)
  nc += data.length
  nl += data.count(<B><FONT COLOR="#BC8F8F">&quot;\n&quot;</FONT></B>)
  ((data.strip! || data).tr!(<B><FONT COLOR="#BC8F8F">&quot;\n&quot;</FONT></B>, <B><FONT COLOR="#BC8F8F">&quot; &quot;</FONT></B>) || data).squeeze!
  nw += data.count(<B><FONT COLOR="#BC8F8F">&quot; &quot;</FONT></B>) + 1
<B><FONT COLOR="#A020F0">end</FONT></B>
puts <B><FONT COLOR="#BC8F8F">&quot;#{nl} #{nw} #{nc}&quot;</FONT></B></pre></td></tr></table>
