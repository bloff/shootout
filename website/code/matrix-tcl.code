</span><span class="line">    4 </span><span class="slc"></span>
<span class="line">    5 </span><span class="slc"># This program based on the original from:
</span><span class="line">    6 </span><span class="slc"></span><span class="slc"># &quot;The What, Why, Who, and Where of Python&quot; By Aaron R. Watters
</span><span class="line">    7 </span><span class="slc"></span><span class="slc"># http://www.networkcomputing.com/unixworld/tutorial/005/005.html
</span><span class="line">    8 </span><span class="slc"></span>
<span class="line">    9 </span><span class="slc"># modified to avoid matrix size checks
</span><span class="line">   10 </span><span class="slc"></span><span class="slc"># --Doug
</span><span class="line">   11 </span><span class="slc"></span>
<span class="line">   12 </span><span class="slc"># additional speedups by Kristoffer Lawson and Miguel Sofer
</span><span class="line">   13 </span><span class="slc"></span>
<span class="line">   14 </span><span class="kwa">set</span> size <span class="num">30</span><span class="sym">;
</span><span class="line">   15 </span><span class="sym">
</span><span class="line">   16 </span><span class="sym"></span><span class="kwa">proc</span> mkmatrix <span class="sym">{</span>rows cols<span class="sym">} {
</span><span class="line">   17 </span><span class="sym"></span>    <span class="kwa">set</span> count <span class="num">1</span><span class="sym">;
</span><span class="line">   18 </span><span class="sym"></span>    <span class="kwa">set</span> mx <span class="sym">[</span><span class="kwa">list</span><span class="sym">]
</span><span class="line">   19 </span><span class="sym"></span>    <span class="kwa">for</span> <span class="sym">{</span> <span class="kwa">set</span> i <span class="num">0</span> <span class="sym">} {</span> <span class="kwb">$i</span> <span class="sym">&lt;</span> <span class="kwb">$rows</span> <span class="sym">} {</span> <span class="kwa">incr</span> i <span class="sym">} {
</span><span class="line">   20 </span><span class="sym"></span>        <span class="kwa">set</span> row <span class="sym">[</span><span class="kwa">list</span><span class="sym">]
</span><span class="line">   21 </span><span class="sym"></span>        <span class="kwa">for</span> <span class="sym">{</span> <span class="kwa">set</span> j <span class="num">0</span> <span class="sym">} {</span> <span class="kwb">$j</span> <span class="sym">&lt;</span> <span class="kwb">$cols</span> <span class="sym">} {</span> <span class="kwa">incr</span> j <span class="sym">} {
</span><span class="line">   22 </span><span class="sym"></span>            <span class="kwa">lappend</span> row <span class="kwb">$count</span><span class="sym">;
</span><span class="line">   23 </span><span class="sym"></span>            <span class="kwa">incr</span> count<span class="sym">;
</span><span class="line">   24 </span><span class="sym">        }
</span><span class="line">   25 </span><span class="sym"></span>        <span class="kwa">lappend</span> mx <span class="kwb">$row</span><span class="sym">;
</span><span class="line">   26 </span><span class="sym">    }
</span><span class="line">   27 </span><span class="sym"></span>    <span class="kwa">return</span> <span class="kwb">$mx</span><span class="sym">;
</span><span class="line">   28 </span><span class="sym">}
</span><span class="line">   29 </span><span class="sym">
</span><span class="line">   30 </span><span class="sym"></span><span class="kwa">proc</span> mmult <span class="sym">{</span>m1 m2<span class="sym">} {
</span><span class="line">   31 </span><span class="sym"></span>    <span class="kwa">set</span> cols <span class="sym">[</span><span class="kwa">lindex</span> <span class="kwb">$m2</span> <span class="num">0</span><span class="sym">]
</span><span class="line">   32 </span><span class="sym"></span>    <span class="kwa">foreach</span> row1 <span class="kwb">$m1</span> <span class="sym">{
</span><span class="line">   33 </span><span class="sym"></span>        <span class="kwa">set</span> row <span class="sym">[</span><span class="kwa">list</span><span class="sym">]
</span><span class="line">   34 </span><span class="sym"></span>        <span class="kwa">set</span> i <span class="num">0
</span><span class="line">   35 </span><span class="num"></span>        <span class="kwa">foreach</span> <span class="sym">-</span> <span class="kwb">$cols</span> <span class="sym">{
</span><span class="line">   36 </span><span class="sym"></span>            <span class="kwa">set</span> elem <span class="num">0
</span><span class="line">   37 </span><span class="num"></span>            <span class="kwa">foreach</span> elem1 <span class="kwb">$row1</span> row2 <span class="kwb">$m2</span> <span class="sym">{
</span><span class="line">   38 </span><span class="sym"></span>                <span class="kwa">set</span> elem <span class="sym">[</span><span class="kwa">expr</span> <span class="sym">{</span><span class="kwb">$elem</span> <span class="sym">+</span> <span class="kwb">$elem1</span> <span class="sym">* [</span><span class="kwa">lindex</span> <span class="kwb">$row2 $i</span><span class="sym">]}]
</span><span class="line">   39 </span><span class="sym">            }
</span><span class="line">   40 </span><span class="sym"></span>            <span class="kwa">lappend</span> row <span class="kwb">$elem
</span><span class="line">   41 </span><span class="kwb"></span>            <span class="kwa">incr</span> i
<span class="line">   42 </span>        <span class="sym">}
</span><span class="line">   43 </span><span class="sym"></span>        <span class="kwa">lappend</span> result <span class="kwb">$row
</span><span class="line">   44 </span><span class="kwb"></span>    <span class="sym">}
</span><span class="line">   45 </span><span class="sym"></span>    <span class="kwa">return</span> <span class="kwb">$result
</span><span class="line">   46 </span><span class="kwb"></span><span class="sym">}
</span><span class="line">   47 </span><span class="sym">
</span><span class="line">   48 </span><span class="sym"></span><span class="kwa">proc</span> main <span class="sym">{} {
</span><span class="line">   49 </span><span class="sym"></span>    <span class="kwa">global</span> argv size
<span class="line">   50 </span>    <span class="kwa">set</span> num <span class="sym">[</span><span class="kwa">lindex</span> <span class="kwb">$argv</span> <span class="num">0</span><span class="sym">]
</span><span class="line">   51 </span><span class="sym"></span>    <span class="kwa">if</span> <span class="sym">{</span><span class="kwb">$num</span> <span class="sym">&lt;</span> <span class="num">1</span><span class="sym">} {
</span><span class="line">   52 </span><span class="sym"></span>        <span class="kwa">set</span> num <span class="num">1
</span><span class="line">   53 </span><span class="num"></span>    <span class="sym">}
</span><span class="line">   54 </span><span class="sym">
</span><span class="line">   55 </span><span class="sym"></span>    <span class="kwa">set</span> m1 <span class="sym">[</span>mkmatrix <span class="kwb">$size $size</span><span class="sym">]
</span><span class="line">   56 </span><span class="sym"></span>    <span class="kwa">set</span> m2 <span class="sym">[</span>mkmatrix <span class="kwb">$size $size</span><span class="sym">]
</span><span class="line">   57 </span><span class="sym"></span>    <span class="kwa">while</span> <span class="sym">{</span><span class="kwb">$num</span> <span class="sym">&gt;</span> <span class="num">0</span><span class="sym">} {
</span><span class="line">   58 </span><span class="sym"></span>        <span class="kwa">incr</span> num <span class="num">-1
</span><span class="line">   59 </span><span class="num"></span>        <span class="kwa">set</span> m <span class="sym">[</span>mmult <span class="kwb">$m1 $m2</span><span class="sym">]
</span><span class="line">   60 </span><span class="sym">    }
</span><span class="line">   61 </span><span class="sym">
</span><span class="line">   62 </span><span class="sym"></span>    <span class="kwa">puts</span> <span class="str">&quot;[lindex [lindex $m 0] 0] [lindex [lindex $m 2] 3] [lindex [lindex $m 3] 2] [lindex [lindex $m 4] 4]&quot;</span>
<span class="line">   63 </span><span class="sym">}
</span><span class="line">   64 </span><span class="sym">
</span><span class="line">   65 </span><span class="sym"></span>main
