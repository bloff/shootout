</FONT></I>
<B><FONT COLOR="#A020F0">use</FONT></B> strict;
<B><FONT COLOR="#A020F0">use</FONT></B> integer;

<B><FONT COLOR="#A020F0">my</FONT></B> $NUM = ($ARGV[0] &lt; 1) ? 1 : $ARGV[0];
<B><FONT COLOR="#A020F0">my</FONT></B> $count;
<B><FONT COLOR="#A020F0">my</FONT></B> @flags = ();
<B><FONT COLOR="#A020F0">while</FONT></B> ($NUM--) {
    $count = 0; 
    <B><FONT COLOR="#A020F0">my</FONT></B> @flags = (0 .. 8192);
    <B><FONT COLOR="#A020F0">for</FONT></B> <B><FONT COLOR="#A020F0">my</FONT></B> $i (2 .. 8192 ) {
	<B><FONT COLOR="#A020F0">next</FONT></B> <B><FONT COLOR="#A020F0">unless</FONT></B> <B><FONT COLOR="#A020F0">defined</FONT></B> $flags[$i];
	<I><FONT COLOR="#B22222"># remove all multiples of prime: i
</FONT></I>	<B><FONT COLOR="#A020F0">my</FONT></B> $k = $i;
	<B><FONT COLOR="#A020F0">undef</FONT></B> $flags[$k] <B><FONT COLOR="#A020F0">while</FONT></B> (($k+=$i) &lt; 8193);
	$count++;
    }
}
<B><FONT COLOR="#A020F0">print</FONT></B> <B><FONT COLOR="#BC8F8F">&quot;Count: $count\n&quot;</FONT></B>;</pre></td></tr></table>
