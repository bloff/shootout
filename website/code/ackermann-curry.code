<B><FONT COLOR="#A020F0">import</FONT></B> System(getArgs)
<B><FONT COLOR="#A020F0">import</FONT></B> Read

ack <B><FONT COLOR="#228B22">:: Int -&gt; Int -&gt; Int
</FONT></B>ack m n
  | m == 0 = n + 1
  | n == 0 = ack (m - 1) 1
  | otherwise = ack (m - 1) (ack m (n - 1))

main = do
       ~[number] &lt;- getArgs
       <B><FONT COLOR="#A020F0">let</FONT></B> n = read readDec number <B><FONT COLOR="#A020F0">in</FONT></B>
         putStrLn (<B><FONT COLOR="#BC8F8F">&quot;Ack(3,&quot;</FONT></B> ++ (show n) ++ <B><FONT COLOR="#BC8F8F">&quot;): &quot;</FONT></B> ++ (show (ack 3 n)))</pre></td></tr></table>
