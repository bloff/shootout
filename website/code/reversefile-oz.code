      <span class="sym">{</span>ReverseFile FILE<span class="sym">}</span>
      <span class="sym">{</span>System.showInfo LINE<span class="sym">}</span>
    <span class="kwb">end</span>
  <span class="kwb">end</span>

<span class="slc">% ------------- %</span>

<span class="kwb">in</span>
  <span class="sym">{</span>ReverseFile <span class="sym">{</span>New TextFile_ init<span class="sym">(</span>name<span class="sym">:</span>stdin<span class="sym">)}}</span>
  <span class="sym">{</span>Application.exit <span class="num">0</span><span class="sym">}</span>
<span class="kwb">end</span>

