</span>        <span class="kwa">let</span> bodies <span class="sym">=</span> offset_momentum <span class="sym">[</span>sun<span class="sym">,</span> jupiter<span class="sym">,</span> saturn<span class="sym">,</span> neptune<span class="sym">,</span> uranus<span class="sym">]
</span>        <span class="kwa">let</span> begin <span class="sym">=</span> energy n bodies
