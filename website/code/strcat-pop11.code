constant aString = 'hello\n';

define constant procedure <B><FONT COLOR="#0000FF">get_args</FONT></B>();
   <B><FONT COLOR="#A020F0">if</FONT></B> null(poparglist) then 1 <B><FONT COLOR="#A020F0">else</FONT></B>
      strnumber( hd(poparglist) )
   endif
enddefine;

vars n = get_args();

define constant procedure <B><FONT COLOR="#0000FF">string_concat</FONT></B> (n);
  concat_strings( [% repeat n times aString endrepeat %] )
enddefine;

<B><FONT COLOR="#0000FF">format_print</FONT></B>('~A\n', [^(length( string_concat(n) ))]);</pre></td></tr></table>
