<B><FONT COLOR="#228B22">MODULE</FONT></B> Random;
<B><FONT COLOR="#5F9EA0">IMPORT</FONT></B> LangShootout, Out;

<B><FONT COLOR="#5F9EA0">CONST</FONT></B>
   IM <B><FONT COLOR="#5F9EA0">=</FONT></B> 139968;
   IA <B><FONT COLOR="#5F9EA0">=</FONT></B> 3877;
   IC <B><FONT COLOR="#5F9EA0">=</FONT></B> 29573;

<B><FONT COLOR="#A020F0">VAR</FONT></B>
   n, last: <B><FONT COLOR="#228B22">LONGINT</FONT></B>;
   result: <B><FONT COLOR="#228B22">LONGREAL</FONT></B>;

<B><FONT COLOR="#A020F0">PROCEDURE </FONT></B><B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">Next</FONT></I></B></FONT></B> (max: <B><FONT COLOR="#228B22">LONGREAL</FONT></B>): <B><FONT COLOR="#228B22">LONGREAL</FONT></B>;
<B><FONT COLOR="#A020F0">BEGIN</FONT></B>
   last <B><FONT COLOR="#5F9EA0">:=</FONT></B> (last<B><FONT COLOR="#5F9EA0">*</FONT></B>IA <B><FONT COLOR="#5F9EA0">+</FONT></B> IC) <B><FONT COLOR="#A020F0">MOD</FONT></B> IM;
   <B><FONT COLOR="#A020F0">RETURN</FONT></B> max <B><FONT COLOR="#5F9EA0">*</FONT></B> last <B><FONT COLOR="#5F9EA0">/</FONT></B> IM;
<B><FONT COLOR="#A020F0">END </FONT></B><B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">Next</FONT></I></B></FONT></B>;

<B><FONT COLOR="#A020F0">BEGIN</FONT></B>
   last <B><FONT COLOR="#5F9EA0">:=</FONT></B> 42;
   n <B><FONT COLOR="#5F9EA0">:=</FONT></B> LangShootout.Argi();

   <B><FONT COLOR="#A020F0">WHILE</FONT></B> n <B><FONT COLOR="#5F9EA0">&gt;</FONT></B> 0 <B><FONT COLOR="#A020F0">DO</FONT></B>
      <B><FONT COLOR="#A020F0">DEC</FONT></B>(n);
      result <B><FONT COLOR="#5F9EA0">:=</FONT></B> Next(100.0);
   <B><FONT COLOR="#A020F0">END</FONT></B>;  	

   Out.LongRealFix(result,0,9); Out.Ln;
<B><FONT COLOR="#A020F0">END </FONT></B><B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">Random</FONT></I></B></FONT></B>.</pre></td></tr></table>
