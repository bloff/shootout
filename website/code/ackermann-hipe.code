<B><FONT COLOR="#5F9EA0">-module</FONT></B>(ackermann).
<B><FONT COLOR="#5F9EA0">-export</FONT></B>([main/1]).

<B><FONT COLOR="#0000FF">main</FONT></B>() -&gt; main([<B><FONT COLOR="#BC8F8F">'1'</FONT></B>]).
<B><FONT COLOR="#0000FF">main</FONT></B>([<FONT COLOR="#B8860B">Arg</FONT>]) -&gt;
    <FONT COLOR="#B8860B">Num</FONT> = <B><FONT COLOR="#A020F0">list_to_integer</FONT></B>(<B><FONT COLOR="#A020F0">atom_to_list</FONT></B>(<FONT COLOR="#B8860B">Arg</FONT>)),
    io:fwrite(<B><FONT COLOR="#BC8F8F">&quot;Ack(3,~w): ~w\n&quot;</FONT></B>, [<FONT COLOR="#B8860B">Num</FONT>, ack(3, <FONT COLOR="#B8860B">Num</FONT>)]),
    <B><FONT COLOR="#A020F0">halt</FONT></B>(0).

<B><FONT COLOR="#0000FF">ack</FONT></B>(0, <FONT COLOR="#B8860B">N</FONT>) -&gt; <FONT COLOR="#B8860B">N</FONT>+1;
<B><FONT COLOR="#0000FF">ack</FONT></B>(<FONT COLOR="#B8860B">M</FONT>, 0) -&gt; ack(<FONT COLOR="#B8860B">M</FONT>-1, 1);
<B><FONT COLOR="#0000FF">ack</FONT></B>(<FONT COLOR="#B8860B">M</FONT>, <FONT COLOR="#B8860B">N</FONT>) -&gt; ack(<FONT COLOR="#B8860B">M</FONT>-1, ack(<FONT COLOR="#B8860B">M</FONT>, <FONT COLOR="#B8860B">N</FONT>-1)).</pre></td></tr></table>
