<B><FONT COLOR="#A020F0">local</FONT></B> IM <B><FONT COLOR="#5F9EA0">=</FONT></B> 139968
<B><FONT COLOR="#A020F0">local</FONT></B> IA <B><FONT COLOR="#5F9EA0">=</FONT></B> 3877
<B><FONT COLOR="#A020F0">local</FONT></B> IC <B><FONT COLOR="#5F9EA0">=</FONT></B> 29573

<B><FONT COLOR="#A020F0">local</FONT></B> LAST <B><FONT COLOR="#5F9EA0">=</FONT></B> 42
<B><FONT COLOR="#A020F0">function </FONT></B><B><FONT COLOR="#0000FF"><B><I><FONT COLOR="#000000">gen_random</FONT></I></B></FONT></B> <B><FONT COLOR="#A020F0">(max)</FONT></B>
