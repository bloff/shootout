#!/usr/bin/mzscheme -r
<I><FONT COLOR="#B22222">;
</FONT></I><I><FONT COLOR="#B22222">;  Faster, more idiomatic Scheme by Neil Van Dyke
</FONT></I><I><FONT COLOR="#B22222">;
</FONT></I>(<B><FONT COLOR="#A020F0">define</FONT></B> (<B><FONT COLOR="#0000FF">main</FONT></B> iport)
  (apply printf <B><FONT COLOR="#BC8F8F">&quot;~s ~s ~s\n&quot;</FONT></B>
         (<B><FONT COLOR="#A020F0">let</FONT></B> wc ((i #f) (lines 0) (words 0) (chars 0))
	   (<B><FONT COLOR="#A020F0">let</FONT></B> ((x (read-char iport)))
	     (<B><FONT COLOR="#A020F0">if</FONT></B> (eof-object? x)
	         (list lines words chars)
		 (<B><FONT COLOR="#A020F0">case</FONT></B> x
		   ((#\newline)     (wc #f (add1 lines) words (add1 chars)))
		   ((#\space #\tab) (wc #f       lines  words (add1 chars)))
		   (<B><FONT COLOR="#A020F0">else</FONT></B>
		     (wc #t lines (<B><FONT COLOR="#A020F0">if</FONT></B> i words (add1 words)) (add1 chars)))))))))

(main (current-input-port))</pre></td></tr></table>
