    <B><FONT COLOR="#228B22">int</FONT></B> i, n = ((argc == 2) ? atoi(argv[1]) : 1);
    string str;
    size_t capacity = 31;
    str.reserve(capacity); <I><FONT COLOR="#B22222">// as per C-string
</FONT></I>    size_t newLength = 6;
