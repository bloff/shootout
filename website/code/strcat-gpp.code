	    str.reserve(capacity);
	}
	str += <B><FONT COLOR="#BC8F8F">&quot;hello\n&quot;</FONT></B>;
	newLength += 6;
    }
    cout &lt;&lt; str.length() &lt;&lt; endl;
    <B><FONT COLOR="#A020F0">return</FONT></B> 0;
