</span>  <span class="kwa">write</span><span class="sym">(</span><span class="kwa">format</span><span class="sym">(</span><span class="str">&quot;%7d %s</span><span class="esc">\n</span><span class="str">&quot;</span><span class="sym">,</span> count<span class="sym">[</span>w<span class="sym">],</span> w<span class="sym">))
