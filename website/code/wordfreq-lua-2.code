  for</span> w <span class="kwa">in</span> gfind<span class="sym">(</span>lower<span class="sym">(</span>lines<span class="sym">),</span> <span class="str">&quot;%l+&quot;</span><span class="sym">)</span> <span class="kwa">do</span> count<span class="sym">[</span>w<span class="sym">] =</span> count<span class="sym">[</span>w<span class="sym">] +</span> <span class="num">1</span> <span class="kwa">end
