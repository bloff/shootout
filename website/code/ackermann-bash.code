<span class="kwa">function</span> Ack <span class="sym">() {
</span>    <span class="kwa">if</span> <span class="sym">[</span> <span class="kwb">$1</span> <span class="sym">-</span>eq <span class="num">0</span> <span class="sym">];</span> <span class="kwa">then
</span>        Ack<span class="sym">=</span><span class="kwb">$</span><span class="sym">[</span> <span class="kwb">$2</span> <span class="sym">+</span> <span class="num">1</span> <span class="sym">]
</span>    <span class="kwa">elif</span> <span class="sym">[</span> <span class="kwb">$2</span> <span class="sym">-</span>eq <span class="num">0</span> <span class="sym">];</span> <span class="kwa">then
</span>        Ack <span class="kwb">$</span><span class="sym">[</span> <span class="kwb">$1</span> <span class="num">- 1</span> <span class="sym">]</span> <span class="num">1
</span>    <span class="kwa">else
</span>        Ack <span class="kwb">$1 $</span><span class="sym">[</span> <span class="kwb">$2</span> <span class="num">- 1</span> <span class="sym">]
</span>        <span class="kwb">local</span> SubAck<span class="sym">=</span><span class="kwb">$Ack
</span>        Ack <span class="kwb">$</span><span class="sym">[</span> <span class="kwb">$1</span> <span class="num">- 1</span> <span class="sym">]</span> <span class="kwb">$SubAck
</span>    <span class="kwa">fi
</span>}

n<span class="sym">=</span><span class="kwb">${1:-1}</span>
Ack <span class="num">3</span> <span class="kwb">$n
echo</span> <span class="str">&quot;Ack(3,$n): $Ack&quot;</span>
