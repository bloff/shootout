<span class="sym">}

</span>def n <span class="sym">= (</span>args<span class="sym">.</span>length <span class="sym">==</span> <span class="num">0</span> ? <span class="num">1</span> <span class="sym">:</span> args<span class="sym">[</span><span class="num">0</span><span class="sym">].</span>toInteger<span class="sym">()) -</span> <span class="num">1
</span><span class="kwa">while</span> <span class="sym">(</span>n<span class="sym">--) {
