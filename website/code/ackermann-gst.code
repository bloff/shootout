!Integer methodsFor: <B><FONT COLOR="#BC8F8F">'shootout'</FONT></B>!

ackermann: anInteger
   ^self = 0
      ifTrue: [anInteger + 1]
      ifFalse: [
         anInteger = 0
            ifTrue: [self - 1 ackermann:  1]
            ifFalse: [self - 1 ackermann: (self ackermann: anInteger - 1)] ] ! !


| n |
n := Smalltalk arguments first asInteger.

Transcript show: <B><FONT COLOR="#BC8F8F">'Ack(3,'</FONT></B>; show: n printString; show: <B><FONT COLOR="#BC8F8F">'): '</FONT></B>; 
           show: (3 ackermann: n) printString; nl!</pre></td></tr></table>
