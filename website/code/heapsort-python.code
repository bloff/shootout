<B><FONT COLOR="#A020F0">import</FONT></B> sys

IM = 139968
IA =   3877
IC =  29573

LAST = 42
<B><FONT COLOR="#A020F0">def</FONT></B> <B><FONT COLOR="#0000FF">gen_random</FONT></B>(max):
    <B><FONT COLOR="#A020F0">global</FONT></B> LAST
    LAST = (LAST * IA + IC) % IM
    <B><FONT COLOR="#A020F0">return</FONT></B>( (max * LAST) / IM )

<B><FONT COLOR="#A020F0">def</FONT></B> <B><FONT COLOR="#0000FF">heapsort</FONT></B>(n, ra):
    rra = i = j = 0
    l = (n &gt;&gt; 1) + 1
    ir = n

    <B><FONT COLOR="#A020F0">while</FONT></B> (1):
        <B><FONT COLOR="#A020F0">if</FONT></B> (l &gt; 1):
            l -= 1
            rra = ra[l]
        <B><FONT COLOR="#A020F0">else</FONT></B>:
            rra = ra[ir]
            ra[ir] = ra[1]
            ir -= 1
            <B><FONT COLOR="#A020F0">if</FONT></B> (ir == 1):
                ra[1] = rra
                <B><FONT COLOR="#A020F0">return</FONT></B>
        i = l
        j = l &lt;&lt; 1
        <B><FONT COLOR="#A020F0">while</FONT></B> (j &lt;= ir):
            <B><FONT COLOR="#A020F0">if</FONT></B> ((j &lt; ir) <B><FONT COLOR="#A020F0">and</FONT></B> (ra[j] &lt; ra[j+1])):
                j += 1
            <B><FONT COLOR="#A020F0">if</FONT></B> (rra &lt; ra[j]):
                ra[i] = ra[j]
                i = j
                j += i
            <B><FONT COLOR="#A020F0">else</FONT></B>:
                j = ir + 1
        ra[i] = rra

<B><FONT COLOR="#A020F0">def</FONT></B> <B><FONT COLOR="#0000FF">main</FONT></B>():
    N = int(sys.argv[1])
    <B><FONT COLOR="#A020F0">if</FONT></B> N &lt; 1:
        N = 1

    ary = range(N+1)
    <B><FONT COLOR="#A020F0">for</FONT></B> i <B><FONT COLOR="#A020F0">in</FONT></B> xrange(1,N+1):
        ary[i] = gen_random(1.0)

    heapsort(N, ary)

    <B><FONT COLOR="#A020F0">print</FONT></B> <B><FONT COLOR="#BC8F8F">&quot;%.10f&quot;</FONT></B> % ary[N]

