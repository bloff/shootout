            nc <span class="sym">+=</span> <span class="kwa">len</span><span class="sym">(</span>line<span class="sym">)</span>
            nw <span class="sym">+=</span> <span class="kwa">len</span><span class="sym">(</span>line<span class="sym">.</span><span class="kwd">split</span><span class="sym">())</span>
        lines <span class="sym">=</span> <span class="kwd">rl</span><span class="sym">(</span><span class="num">4096</span><span class="sym">)</span>

    <span class="kwb">print</span> <span class="str">&quot;%d %d %d&quot;</span> <span class="sym">% (</span>nl<span class="sym">,</span> nw<span class="sym">,</span> nc<span class="sym">)</span>

<span class="kwd">main</span><span class="sym">()</span>
