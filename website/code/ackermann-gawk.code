<B><FONT COLOR="#A020F0">function</FONT></B> ack(m, n) {
    <B><FONT COLOR="#A020F0">if</FONT></B> (m == 0) <B><FONT COLOR="#A020F0">return</FONT></B>( n + 1 );
    <B><FONT COLOR="#A020F0">if</FONT></B> (n == 0) <B><FONT COLOR="#A020F0">return</FONT></B>( ack(m - 1, 1) );
    <B><FONT COLOR="#A020F0">return</FONT></B>( ack(m - 1, ack(m, (n - 1))) );
}

<B><FONT COLOR="#A020F0">BEGIN</FONT></B> {
    n = (<B><FONT COLOR="#A020F0">ARGV</FONT></B>[1] &lt; 1) ? 1 : <B><FONT COLOR="#A020F0">ARGV</FONT></B>[1];
    <B><FONT COLOR="#A020F0">printf</FONT></B>(<B><FONT COLOR="#BC8F8F">&quot;Ack(3,%d): %d\n&quot;</FONT></B>, n, ack(3, n));
    <B><FONT COLOR="#A020F0">exit</FONT></B>;
}</pre></td></tr></table>
