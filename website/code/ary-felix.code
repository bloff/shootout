</FONT></I>include <B><FONT COLOR="#BC8F8F">&quot;std&quot;</FONT></B>;
n := atoi(System::argv 1);
<I><FONT COLOR="#B22222">//adapted from C solution
</FONT></I>open Carray;

x := array_calloc[<B><FONT COLOR="#228B22">int</FONT></B>] n;
y := array_calloc[<B><FONT COLOR="#228B22">int</FONT></B>] n;

var i = 0;
whilst i &lt; n <B><FONT COLOR="#A020F0">do</FONT></B> x.[i] = i + 1; ++i; done;

var k = 0;
whilst k&lt;1000 <B><FONT COLOR="#A020F0">do</FONT></B>
  i = n - 1;
  whilst i &gt;= 0 <B><FONT COLOR="#A020F0">do</FONT></B>
    y.[i] = y.[i] + x.[i];
    --i;
  done;
  ++k;
done;

print y.[0]; print <B><FONT COLOR="#BC8F8F">&quot; &quot;</FONT></B>; print y.[n-1]; endl;
free x;
free y;
