</span><span class="line">   16 </span><span class="slc"></span>    sort <span class="sym">=</span> <span class="str">&quot;sort -nr&quot;</span>
<span class="line">   17 </span>    <span class="kwa">for</span> <span class="sym">(</span>word in freq<span class="sym">) {
