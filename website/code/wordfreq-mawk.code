</span><span class="line">   19 </span><span class="sym"></span>            <span class="kwa">printf</span> <span class="str">&quot;</span><span class="esc">%7</span><span class="str">d</span> <span class="esc">%s\n</span><span class="str">&quot;</span><span class="sym">,</span> freq<span class="sym">[</span>word<span class="sym">],</span> word <span class="sym">|</span> sort
<span class="line">   20 </span>        <span class="sym">}
</span><span class="line">   21 </span><span class="sym">    }
</span><span class="line">   22 </span><span class="sym"></span>    <span class="kwa">close</span><span class="sym">(</span>sort<span class="sym">)
</span><span class="line">   23 </span><span class="sym">}</span>
