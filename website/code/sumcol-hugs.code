<B><FONT COLOR="#A020F0">import</FONT></B> Char( ord )

main = getContents &gt;&gt;= print . acc 0 False 0

acc run False init  []       =      run+init
acc run True  init  []       =      run-init
acc run False init ('\n':xs) = acc (run+init) False 0    xs
acc run True  init ('\n':xs) = acc (run-init) False 0    xs
acc run <B><FONT COLOR="#A020F0">_ </FONT></B>    init (<B><FONT COLOR="#BC8F8F">'-'</FONT></B> :xs) = acc  run       True  init xs
acc run sign  init (x:xs)    = acc  run sign (init*10+ord(x)-ord(<B><FONT COLOR="#BC8F8F">'0'</FONT></B>)) xs
