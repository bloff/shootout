(module except
	(main main))

(<B><FONT COLOR="#A020F0">define</FONT></B> <B><FONT COLOR="#0000FF">HI</FONT></B> 0)
(<B><FONT COLOR="#A020F0">define</FONT></B> <B><FONT COLOR="#0000FF">LO</FONT></B> 0)

(<B><FONT COLOR="#A020F0">define</FONT></B> (<B><FONT COLOR="#0000FF">some_fun</FONT></B> n)
  (try
   (hi_fun n)
   (<B><FONT COLOR="#A020F0">lambda</FONT></B> (escape proc msg obj)
     (print <B><FONT COLOR="#BC8F8F">&quot;should not get here &quot;</FONT></B> proc <B><FONT COLOR="#BC8F8F">&quot;:&quot;</FONT></B> msg <B><FONT COLOR="#BC8F8F">&quot; -- &quot;</FONT></B> obj)
     (escape #f))))

(<B><FONT COLOR="#A020F0">define</FONT></B> (<B><FONT COLOR="#0000FF">hi_fun</FONT></B> n)
  (try
   (lo_fun n)
   (<B><FONT COLOR="#A020F0">lambda</FONT></B> (escape proc msg obj)
     (<B><FONT COLOR="#A020F0">cond</FONT></B> ((not (equal? obj 'Hi))
	    (error proc msg obj)) <I><FONT COLOR="#B22222">; rethrow
</FONT></I>	   (<B><FONT COLOR="#A020F0">else</FONT></B>
	    (<B><FONT COLOR="#A020F0">set!</FONT></B> HI (+ HI 1))
	    (escape #t))))))

(<B><FONT COLOR="#A020F0">define</FONT></B> (<B><FONT COLOR="#0000FF">lo_fun</FONT></B> n)
  (try
   (blowup n)
   (<B><FONT COLOR="#A020F0">lambda</FONT></B> (escape proc msg obj)
     (<B><FONT COLOR="#A020F0">cond</FONT></B> ((not (equal? obj 'Lo))
	    (error proc msg obj)) <I><FONT COLOR="#B22222">; rethrow
</FONT></I>	   (<B><FONT COLOR="#A020F0">else</FONT></B>
	    (<B><FONT COLOR="#A020F0">set!</FONT></B> LO (+ LO 1))
	    (escape #t))))))

(<B><FONT COLOR="#A020F0">define</FONT></B> (<B><FONT COLOR="#0000FF">blowup</FONT></B> n)
  (<B><FONT COLOR="#A020F0">if</FONT></B> (= 0 (modulo n 2))
      (error '() <B><FONT COLOR="#BC8F8F">&quot;Hi Exception&quot;</FONT></B> 'Hi)
      (error '() <B><FONT COLOR="#BC8F8F">&quot;Lo Exception&quot;</FONT></B> 'Lo)))

(<B><FONT COLOR="#A020F0">define</FONT></B> (<B><FONT COLOR="#0000FF">main</FONT></B> args)
  (<B><FONT COLOR="#A020F0">let</FONT></B> ((n (<B><FONT COLOR="#A020F0">or</FONT></B> (<B><FONT COLOR="#A020F0">and</FONT></B> (= (length args) 2) (string-&gt;number (cadr args))) 1)))
    (<B><FONT COLOR="#A020F0">do</FONT></B> ((i 0 (+ i 1)))
	((= i n))
      (some_fun i)))
  (display* <B><FONT COLOR="#BC8F8F">&quot;Exceptions: HI=&quot;</FONT></B> HI <B><FONT COLOR="#BC8F8F">&quot; / LO=&quot;</FONT></B> LO)
  (newline))</pre></td></tr></table>
