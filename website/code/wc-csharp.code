using System;

class wc
{
    public <B><FONT COLOR="#228B22">static</FONT></B> <B><FONT COLOR="#228B22">void</FONT></B> Main(String[] args)
    {
        <B><FONT COLOR="#228B22">int</FONT></B> nread;
        <B><FONT COLOR="#228B22">int</FONT></B> i;
        <B><FONT COLOR="#228B22">char</FONT></B> c;
        <B><FONT COLOR="#228B22">char</FONT></B>[] buf = new <B><FONT COLOR="#228B22">char</FONT></B>[4096];
        <B><FONT COLOR="#228B22">int</FONT></B> nl = 0, nw = 0, nc = 0;
        bool state = false;

        <B><FONT COLOR="#A020F0">while</FONT></B>( (nread = Console.In.Read( buf, 0, 4096)) &gt; 0 ) {
            nc += nread;
            <B><FONT COLOR="#A020F0">for</FONT></B> (i = 0; i &lt; nread; i++) {
                c = buf[i];
                <B><FONT COLOR="#A020F0">if</FONT></B> (c == <B><FONT COLOR="#BC8F8F">'\n'</FONT></B>) ++nl;
                <B><FONT COLOR="#A020F0">if</FONT></B> (c == <B><FONT COLOR="#BC8F8F">' '</FONT></B> || c == <B><FONT COLOR="#BC8F8F">'\n'</FONT></B> || c == <B><FONT COLOR="#BC8F8F">'\t'</FONT></B>) state = false;
                <B><FONT COLOR="#A020F0">else</FONT></B> <B><FONT COLOR="#A020F0">if</FONT></B> (state == false) {
                    state = true;
                    nw++;
                }
            }
        }
        Console.WriteLine(<B><FONT COLOR="#BC8F8F">&quot;{0} {1} {2}&quot;</FONT></B>, nl, nw, nc);
    }
