</FONT></I>package ackermann;

import basic;
import sys;
import array;

private function <B><FONT COLOR="#0000FF">Ack</FONT></B>( M, N )
{
    <B><FONT COLOR="#A020F0">if</FONT></B> (M == 0) <B><FONT COLOR="#A020F0">return</FONT></B>( N + 1 );
    <B><FONT COLOR="#A020F0">if</FONT></B> (N == 0) <B><FONT COLOR="#A020F0">return</FONT></B>( Ack(M - 1, 1) );
    <B><FONT COLOR="#A020F0">return</FONT></B>( Ack(M - 1, Ack(M, (N - 1))) );
}


private n = 1;
<B><FONT COLOR="#0000FF">if</FONT></B>(array.length(sys.args) &gt; 0) {
    n = basic.<B><FONT COLOR="#228B22">int</FONT></B>(sys.args[0]);
} <B><FONT COLOR="#A020F0">else</FONT></B> {
    n = 1;
}
basic.print(<B><FONT COLOR="#BC8F8F">&quot;Ack(3,&quot;</FONT></B>, n, <B><FONT COLOR="#BC8F8F">&quot;): &quot;</FONT></B>, Ack(3, n), <B><FONT COLOR="#BC8F8F">&quot;\n&quot;</FONT></B>);</pre></td></tr></table>
