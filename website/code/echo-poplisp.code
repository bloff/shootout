(define-condition sigpipe)

(defun ih-sigpipe (signal code scp)
  (declare (ignore signal code scp))
  (signal 'sigpipe))

(defun error-return (str)
  (format *standard-output* <B><FONT COLOR="#BC8F8F">&quot;Error: ~s ~%&quot;</FONT></B> str)
  (quit))

