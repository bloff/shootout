</span><span class="kwa">import</span> System<span class="sym">(</span>getArgs<span class="sym">)

</span>main <span class="sym">=</span> <span class="kwa">do</span> <span class="sym">[</span>number<span class="sym">] &lt;-</span> getArgs
          print $ fib <span class="sym">(</span>read number<span class="sym">)

</span>fib <span class="sym">::</span> <span class="kwb">Int</span> <span class="sym">-&gt;</span> <span class="kwb">Int
</span>fib n <span class="sym">|</span> n <span class="sym">&lt;</span> <span class="num">2</span>     <span class="sym">=</span> n
      <span class="sym">|</span> otherwise <span class="sym">=</span> fib <span class="sym">(</span>n<span class="num">-2</span><span class="sym">) +</span> fib <span class="sym">(</span>n<span class="num">-1</span><span class="sym">)

