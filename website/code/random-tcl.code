<B><FONT COLOR="#A020F0">set</FONT></B> IM 139968
<B><FONT COLOR="#A020F0">set</FONT></B> IA   3877
<B><FONT COLOR="#A020F0">set</FONT></B> IC  29573

<B><FONT COLOR="#A020F0">set</FONT></B> <B><FONT COLOR="#A020F0">last</FONT></B> 42

<B><FONT COLOR="#A020F0">proc</FONT></B> <B><FONT COLOR="#0000FF">make_gen_random</FONT></B> {<FONT COLOR="#B8860B"></FONT>} {
    <B><FONT COLOR="#A020F0">global</FONT></B> IM IA IC
    <B><FONT COLOR="#A020F0">set</FONT></B> params [<B><FONT COLOR="#A020F0">list</FONT></B> IM $<FONT COLOR="#B8860B">IM</FONT> IA $<FONT COLOR="#B8860B">IA</FONT> IC $<FONT COLOR="#B8860B">IC</FONT>]
    <B><FONT COLOR="#A020F0">set</FONT></B> body [<B><FONT COLOR="#A020F0">string</FONT></B> map $<FONT COLOR="#B8860B">params</FONT> {
        <B><FONT COLOR="#A020F0">global</FONT></B> <B><FONT COLOR="#A020F0">last</FONT></B>
        <B><FONT COLOR="#A020F0">expr</FONT></B> {($<FONT COLOR="#B8860B">max</FONT> * [<B><FONT COLOR="#A020F0">set</FONT></B> <B><FONT COLOR="#A020F0">last</FONT></B> [<B><FONT COLOR="#A020F0">expr</FONT></B> {($<FONT COLOR="#B8860B">last</FONT> * IA + IC) % IM}]]) / IM}
    }]
    <B><FONT COLOR="#A020F0">proc</FONT></B> <B><FONT COLOR="#0000FF">gen_random</FONT></B> {<FONT COLOR="#B8860B">max</FONT>} $<FONT COLOR="#B8860B">body</FONT>
}

<B><FONT COLOR="#A020F0">proc</FONT></B> <B><FONT COLOR="#0000FF">main</FONT></B> {<FONT COLOR="#B8860B"></FONT>} {
    <B><FONT COLOR="#A020F0">global</FONT></B> argv

    <B><FONT COLOR="#A020F0">set</FONT></B> N [<B><FONT COLOR="#A020F0">expr</FONT></B> {[<B><FONT COLOR="#A020F0">lindex</FONT></B> $<FONT COLOR="#B8860B">argv</FONT> 0] - 1}]
    make_gen_random

    <B><FONT COLOR="#A020F0">while</FONT></B> {$<FONT COLOR="#B8860B">N</FONT>} {
        gen_random 100.0
        <B><FONT COLOR="#A020F0">incr</FONT></B> N -1
    }

    <B><FONT COLOR="#A020F0">puts</FONT></B> [<B><FONT COLOR="#A020F0">format</FONT></B> <B><FONT COLOR="#BC8F8F">&quot;%.9f&quot;</FONT></B> [gen_random 100.0]]
}

