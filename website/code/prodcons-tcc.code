    <span class="kwa">if</span> <span class="sym">(</span><span class="kwd">pthread_create</span><span class="sym">(&amp;</span>t2<span class="sym">, (</span>pthread_attr_t <span class="sym">*)</span>NULL<span class="sym">,</span>
