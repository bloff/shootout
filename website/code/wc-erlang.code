<B><FONT COLOR="#5F9EA0">-module</FONT></B>(wc).
<B><FONT COLOR="#5F9EA0">-export</FONT></B>([main/0, main/1]).

<B><FONT COLOR="#5F9EA0">-define</FONT></B>(<B><FONT COLOR="#DA70D6">BUFSIZE</FONT></B>, 4096).

<B><FONT COLOR="#0000FF">main</FONT></B>() -&gt; main([<B><FONT COLOR="#BC8F8F">'1'</FONT></B>]).
<B><FONT COLOR="#0000FF">main</FONT></B>(<FONT COLOR="#B8860B">_Args</FONT>) -&gt;
    ok = io:setopts([<B><FONT COLOR="#DA70D6">binary</FONT></B>]),
    {<FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>, <FONT COLOR="#B8860B">C</FONT>} = s(next(), 0, 0, 0),
    io:fwrite(<B><FONT COLOR="#BC8F8F">&quot;~p ~p ~p~n&quot;</FONT></B>, [<FONT COLOR="#B8860B">L</FONT>,<FONT COLOR="#B8860B">W</FONT>,<FONT COLOR="#B8860B">C</FONT>]),
    erlang:<B><FONT COLOR="#A020F0">halt</FONT></B>(0).

<B><FONT COLOR="#0000FF">next</FONT></B>() -&gt; next(io:get_chars(<B><FONT COLOR="#BC8F8F">''</FONT></B>,?<B><FONT COLOR="#DA70D6">BUFSIZE</FONT></B>)).

<B><FONT COLOR="#0000FF">next</FONT></B>(eof) -&gt; eof;
<B><FONT COLOR="#0000FF">next</FONT></B>(<FONT COLOR="#B8860B">Bin</FONT>) -&gt; <B><FONT COLOR="#A020F0">binary_to_list</FONT></B>(<FONT COLOR="#B8860B">Bin</FONT>).

<B><FONT COLOR="#0000FF">s</FONT></B>([<B><FONT COLOR="#BC8F8F">$\</FONT></B>s|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>) -&gt; s(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">s</FONT></B>([<B><FONT COLOR="#BC8F8F">$\</FONT></B>t|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>) -&gt; s(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">s</FONT></B>([<B><FONT COLOR="#BC8F8F">$\</FONT></B>n|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>) -&gt; s(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>+1, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">s</FONT></B>([<FONT COLOR="#B8860B">_</FONT>|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>)   -&gt; w(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>+1);
<B><FONT COLOR="#0000FF">s</FONT></B>([], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>)      -&gt; s(next(), <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">s</FONT></B>(eof, <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>)     -&gt; {<FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>, <FONT COLOR="#B8860B">C</FONT>}.

<B><FONT COLOR="#0000FF">w</FONT></B>([<B><FONT COLOR="#BC8F8F">$\</FONT></B>s|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>) -&gt; s(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">w</FONT></B>([<B><FONT COLOR="#BC8F8F">$\</FONT></B>t|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>) -&gt; s(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">w</FONT></B>([<B><FONT COLOR="#BC8F8F">$\</FONT></B>n|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>) -&gt; s(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>+1, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">w</FONT></B>([<FONT COLOR="#B8860B">_</FONT>|<FONT COLOR="#B8860B">T</FONT>], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>)   -&gt; w(<FONT COLOR="#B8860B">T</FONT>, <FONT COLOR="#B8860B">C</FONT>+1, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">w</FONT></B>([], <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>)      -&gt; w(next(), <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>);
<B><FONT COLOR="#0000FF">w</FONT></B>(eof, <FONT COLOR="#B8860B">C</FONT>, <FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>)     -&gt; {<FONT COLOR="#B8860B">L</FONT>, <FONT COLOR="#B8860B">W</FONT>, <FONT COLOR="#B8860B">C</FONT>}.
</pre></td></tr></table>
