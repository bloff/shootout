<span class="kwa">local</span> chain <span class="sym">=</span> coroutine.create<span class="sym">(</span>link<span class="sym">)</span>

_<span class="sym">,</span>message <span class="sym">=</span> coroutine.resume<span class="sym">(</span>chain<span class="sym">,</span>n<span class="sym">)</span>
