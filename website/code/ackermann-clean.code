<B><FONT COLOR="#A020F0">module</FONT></B> ackermann
<B><FONT COLOR="#A020F0">import</FONT></B> StdEnv, ArgEnv


Ack 0 n = n+1
Ack m 0 = Ack (m-1) 1
Ack m n = Ack (m-1) (Ack m (n-1))


argi = <B><FONT COLOR="#A020F0">if</FONT></B> (argAsInt &lt;= 0) 1 argAsInt
   <B><FONT COLOR="#A020F0">where</FONT></B>
   argv = getCommandLine
   argAsInt = <B><FONT COLOR="#A020F0">if</FONT></B> (size argv == 2) (toInt argv.[1]) 1


Start = <B><FONT COLOR="#BC8F8F">&quot;Ack(3,&quot;</FONT></B> +++ toString argi +++ <B><FONT COLOR="#BC8F8F">&quot;): &quot;</FONT></B> +++ toString (Ack 3 argi) +++ <B><FONT COLOR="#BC8F8F">&quot;\n&quot;</FONT></B>
</pre></td></tr></table>
