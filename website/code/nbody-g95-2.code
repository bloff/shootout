                         SolarMassR <span class="sym">=</span> <span class="num">1</span>. <span class="sym">/</span> SolarMass

  integer          <span class="sym">::</span> num<span class="sym">,</span> i
  character<span class="sym">(</span>len<span class="sym">=</span><span class="num">8</span><span class="sym">) ::</span> argv

  type body
     real<span class="sym">(</span>dp<span class="sym">),</span> dimension<span class="sym">(</span><span class="num">3</span><span class="sym">) ::</span> pos<span class="sym">,</span> vel
     real<span class="sym">(</span>dp<span class="sym">) ::</span> mass
