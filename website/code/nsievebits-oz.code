      <span class="str">&quot;Primes up to&quot;</span> # <span class="sym">{</span>PadLeft <span class="sym">{</span>Int.toString Stop<span class="sym">}</span> <span class="num">9</span> SPACE<span class="sym">}</span> #
      <span class="sym">{</span>PadLeft <span class="sym">{</span>Int.toString <span class="sym">{</span>BitArray.card Bits<span class="sym">}}</span> <span class="num">9</span> SPACE<span class="sym">}</span>
