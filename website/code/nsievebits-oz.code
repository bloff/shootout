<span class="kwb">define</span>

<span class="slc">% ------------- %</span>

  SPACE <span class="sym">= &amp;</span>\040

<span class="slc">% ------------- %</span>

  <span class="kwb">proc</span> <span class="sym">{</span>CalcAndShowSieve Start Stop<span class="sym">}</span>
    Bits <span class="sym">= {</span>Sieve Start Stop<span class="sym">}</span>
