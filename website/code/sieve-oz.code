<span class="slc">%%  Usage: start from command line with</span>
<span class="slc">%%     ozc -x sieve.oz -o sieve.oz.exe</span>
<span class="slc">%%     sieve.oz.exe 900</span>

<span class="kwa">functor</span>
<span class="kwa">import</span> System Application

<span class="kwb">define</span> Args N Flags Start Stop <span class="kwb">in</span>

    <span class="sym">[</span>Args<span class="sym">] = {</span>Application.getArgs plain<span class="sym">}</span>
    N <span class="sym">= {</span>String.toInt Args<span class="sym">}</span>

    Start <span class="sym">=</span> <span class="num">2</span>
    Stop <span class="sym">=</span> <span class="num">8192</span>

    Flags <span class="sym">= {</span>BitArray.new Start Stop<span class="sym">}</span>
    <span class="kwb">for</span> I <span class="kwb">in</span> Start..Stop <span class="kwb">do</span> <span class="sym">{</span>BitArray.set Flags I<span class="sym">}</span> <span class="kwb">end</span>

    <span class="kwb">for</span> I <span class="kwb">in</span> <span class="num">1</span>..N <span class="kwb">do</span>
           <span class="kwb">for</span> J <span class="kwb">in</span> Start..Stop <span class="kwb">do</span>
            <span class="kwb">if</span> <span class="sym">{</span>BitArray.test Flags J<span class="sym">}</span> <span class="kwb">then</span>
                <span class="kwb">for</span> K <span class="kwb">in</span> J<span class="sym">+</span>J..Stop<span class="sym">;</span>J <span class="kwb">do</span> <span class="sym">{</span>BitArray.clear Flags K<span class="sym">}</span> <span class="kwb">end</span>
            <span class="kwb">end</span>
        <span class="kwb">end</span>
    <span class="kwb">end</span>

   <span class="sym">{</span>System.showInfo <span class="str">&quot;Count: &quot;</span>#<span class="sym">{</span>BitArray.card Flags<span class="sym">}}</span>

   <span class="sym">{</span>Application.exit <span class="num">0</span><span class="sym">}</span>
<span class="kwb">end</span>
