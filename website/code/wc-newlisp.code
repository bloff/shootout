#!/usr/bin/newlisp

# count benchmark
#
# Contributed by Lutz Mueller

(set 'lc 0 'wc 0 'cc 0)

(while (set 'line (read-line))
	(inc 'lc)
	(inc 'wc (length (parse (trim line) <B><FONT COLOR="#BC8F8F">&quot;\\s+&quot;</FONT></B> 0)))
	(inc 'cc (+ (length line) 1))) <I><FONT COLOR="#B22222">;; add back the line feed
</FONT></I>
(println lc <B><FONT COLOR="#BC8F8F">&quot; &quot;</FONT></B> wc <B><FONT COLOR="#BC8F8F">&quot; &quot;</FONT></B> cc)

(exit)
